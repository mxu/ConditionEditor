<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<material_list>
	&MATERIAL_LIST_INTRODUCTORY_INSTRUCTION;
	&PHYSICIAN_LAST_REPORT;
	<material id="Doctor's notation of medications" description="Note should clearly indicate current listing of all medications (prescription, over the counter, vitamins)." mandatory="true"/>
	<material id="Physician's letters" description="Copies of all letters sent to you by your Ophthalmologist of past visit(s), (if received)." mandatory="true"/>
	<material id="Operative reports" description="Operative reports for any prior eye surgeries and / or laser treatments, if done." mandatory="true"/>
	<material id="Discharge summaries" description="Discharge summaries of any recent (within one year) hospitalizations. " mandatory="true"/>
	<instruction text="&lt;BR&gt;  &lt;b&gt;Report of clinical examination by ophthalmologist to include the following: &lt;/b&gt;"/>
	<material id="Clinical examination by ophthalmologist" description="Visual acuity, manifest refraction, current glasses / contact lens prescription, intraocular pressure, anterior segment examination with description or drawing, dilated fundus examination with description or drawing." mandatory="true"/>
	<material id="Ophthalmologist's summary report" description="This summary to be written by your ophthalmologist and must contain all items listed above." mandatory="true"/>
	<material id="Eye photographs" description="Most recent color photographs (preferably stereo views) of both eyes as well as any and all previous photographs.  If media opacities prevent obtaining photos, then ultrasound (B scan) required." mandatory="true"/>
	<material id="Fluorescein angiogram" description="Most recent fluorescein angiogram reports and films of both eyes.  The actual films of the scans are required for the most recent exam.  The actual films are more useful for previous exams, but reports are acceptable." mandatory="true"/>
	<material id="Optical coherence tomography" description="Most recent optical coherence tomography.  The actual films of the scans are more important than the reports of the scans, if the reports cannot be obtained." mandatory="true"/>
	<instruction text="&lt;BR&gt; &lt;b&gt; The following list of medical information although not mandatory, are optional if done: &lt;/b&gt;"/>
	<material id="Current bloodwork" description="Within the past 6 months." mandatory="false"/>
	<material id="Other" description="Any other medical information you or your physician may feel is pertinent to this consultation." mandatory="false"/>
	&MATERIAL_LIST_CLOSING_INSTRUCTION;
</material_list>
