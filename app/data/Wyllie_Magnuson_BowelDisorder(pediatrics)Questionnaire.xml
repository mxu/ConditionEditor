<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="What are the primary hopes and expectations that you have regarding this consultation?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Did patient's mother experience any of the following problems with her pregnancy?(Choose all that apply)">
			<item_response>
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="fever"/>
				<selection selected="false" text="infection"/>
				<selection selected="false" text="antibiotic administration"/>
				<selection selected="false" text="other medication administration">
					<question mandatory="true" prompt="If other medication, please give detail:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="Did patient go home with mother within 2-7 days following birth?(if known)">
			<item_response single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Yes"/>
				<selection selected="false" text="No">
					<question mandatory="true" prompt="If no, please explain the details of continued hospital stay:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Were there any problems with the delivery of this child?">
			<item_response single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please explain the detail:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="What was the first APGAR score at birth?(if known)">
			<free_form_response height="1"/>
		</question>
		<question mandatory="false" prompt="What was the second APGAR score at birth?(if known)">
			<free_form_response height="1"/>
		</question>
		<question mandatory="true" prompt="Was the patient born at full term?">
			<item_response single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Yes"/>
				<selection selected="false" text="No">
					<question mandatory="true" prompt="If no, at how many months gestation was patient born?">
						<free_form_response height="1"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What was the patient's weight at birth?">
			<table_response initial_rows_to_display="1" row_height="2">
				<column_definitions>
					<column_definition label="# of pounds" width="25"/>
					<column_definition label="# of ounces" width="25"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What was the patient's length at birth?(# of inches)">
			<free_form_response height="1"/>
		</question>
		<question mandatory="true" prompt="Was the meconium passed within 24-48 hours from birth?">
			<item_response single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Yes"/>
				<selection selected="false" text="No"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="How old was the patient when symptoms started?">
			<free_form_response height="1"/>
		</question>
		<question mandatory="true" prompt="When was the diagnosis established?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
