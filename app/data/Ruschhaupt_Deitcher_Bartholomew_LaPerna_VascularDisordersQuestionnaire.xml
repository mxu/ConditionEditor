<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<!-- edited with XML Spy v3.5 (http://www.xmlspy.com) by Samir (IT) -->
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="false" prompt="Do you have a family history of any of the following conditions?  (Fill in all that apply)">
			<table_response add_row_increment="2" row_height="4">
				<column_definitions>
					<column_definition label="Condition" width="35"/>
					<column_definition label="Family &lt;BR&gt; relationship" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Aneurysm</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Aortic dissection</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Bleeding disorders</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Blood clots</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Coronary artery disease</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Cancer</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>CVA (stroke)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Diabetes</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Hypertension</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>COPD/emphysema</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Kidney disease</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other vascular/circulatory problems (please list below)</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="What is your ancestral origin? (Irish, Italian, German, etc.)">
			<free_form_response height="2"/>
		</question>
		<question mandatory="true" prompt="Have you received a blood or blood product transfusion (platelets, plasma, etc.)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have received a blood or blood product transfusion, please provide additional information below:">
						<table_response add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Type of transfusion" width="35"/>
								<column_definition label="Month/Year" width="20"/>
								<column_definition label="Adverse reaction(s), side effects (if any)" width="40"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="When was your current diagnosis (one you are seeking a second opinion for) made?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="When were you last examined by your physician?">
			&MONTH_YEAR_TABLE_RESPONSE;	
		</question>
		<question mandatory="true" prompt="Have you ever had a myocardial infarction (heart attack)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever had a myocardial infarction, provide date(s) beginning with most recent:">
						<table_response initial_rows_to_display="3" add_row_increment="2">
							<column_definitions>
								<column_definition label="Month" width="15"/>
								<column_definition label="Year" width="5"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been diagnosed with a deep venous thrombosis (DVT) (blood clot in the leg)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been diagnosed with a deep venous thrombosis, provide indicate the date:">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been diagnosed with a pulmonary embolism (PE) (blood clot in the lung)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been diagnosed with a pulmonary embolism, provide date:">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been diagnosed with a bleeding disorder?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been diagnosed with a bleeding disorder, please provide the following information:">
						<table_response add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Type of bleeding disorder" width="35"/>
								<column_definition label="Date of diagnosis (Month/Year)" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you bruise easily?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a history of any of the following?  (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Angina"/>
				<selection selected="false" text="Arrhythmias (heart irregularities)"/>
				<selection selected="false" text="Bronchitis"/>
				<selection selected="false" text="Ehlers-Danlos syndrome"/>
				<selection selected="false" text="Emphysema/COPD"/>
				<selection selected="false" text="Hemophilia A"/>
				<selection selected="false" text="Hemophilia B"/>
				<selection selected="false" text="Hypercoaguable state"/>
				<selection selected="false" text="Immune thrombocytopenic purpura (ITP)"/>
				<selection selected="false" text="Marfan's syndrome"/>
				<selection selected="false" text="Pneumonia"/>
				<selection selected="false" text="Shortness of breath"/>
				<selection selected="false" text="Sleep apnea"/>
				<selection selected="false" text="Thrombotic thrombocytopenia purpura (TTP)"/>
				<selection selected="false" text="Transient ischemia attack (TIA)"/>
				<selection selected="false" text="Von Willebrand's disease"/>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever undergone dental extractions?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever undergone dental extractions, please provide information below:">
						<table_response add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Month/Year" width="35"/>
								<column_definition label="Complications, if any" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please indicate if you have had any of the following procedures or surgeries:  (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Lower extremity (leg) bypass surgery"/>
				<selection selected="false" text="Carotid (neck) artery surgery"/>
				<selection selected="false" text="Abdominal aneurysm repair"/>
				<selection selected="false" text="Thoracic aneurysm repair"/>
				<selection selected="false" text="Amputation"/>
				<selection selected="false" text="Percutaneous intervention (balloon angioplasty)"/>
				<selection selected="false" text="Pacemaker insertion"/>
				<selection selected="false" text="Renal (kidney) artery intervention"/>
				<selection selected="false" text="Aortic surgical procedures"/>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="false" prompt="If you are a female, have you ever been pregnant?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not applicable"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been pregnant, how many pregnancies?">
						<free_form_response height="2"/>
					</question>
					<question mandatory="true" prompt="How many live births have you had?">
						<free_form_response height="2"/>
					</question>
					<question mandatory="true" prompt="How many elective abortions have you had?">
						<free_form_response height="2"/>
					</question>
					<question mandatory="true" prompt="Have you had any spontaneous abortions (miscarriages)?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not applicable"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="false" prompt="If you have had any spontaneous abortions, please provide additional information below:">
									<table_response add_row_increment="2" row_height="2">
										<column_definitions>
											<column_definition label="Month/Year" width="35"/>
											<column_definition label="How many weeks &lt;BR&gt; of gestation (how far along)?" width="20"/>
										</column_definitions>
									</table_response>
								</question>
							</selection>
						</item_response>		
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="If you ever had any of the following tests or studies, please provide dates. (choose all that apply)">
			<table_response add_row_increment="2" row_height="4">
				<column_definitions>
					<column_definition label="Study" width="45"/>
					<column_definition label="Month" width="20"/>
					<column_definition label="Year" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Angiogram</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Chest X-ray</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>CT scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>V/Q (ventilation/perfusion) scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Venous ultrasound</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Contrast venography</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>PVR (peripheral vascular resistance)</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>EKG</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Blood clotting element testing</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other (Please list below)</cell>
					<cell/>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Have you recently (within) the past month) had any of the following symptoms?">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Chest pain"/>
				<selection selected="false" text="Shortness of breath"/>
				<selection selected="false" text="Fever &gt; 100 F / 38 C"/>
				<selection selected="false" text="Back pain"/>
				<selection selected="false" text="Rigor/shaking chills"/>
				<selection selected="false" text="Productive cough"/>
				<selection selected="false" text="Abdominal (belly) pain"/>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you been treated for your current condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have been treated for your current condition, please provide the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="1">
							<column_definitions>
								<column_definition label="Treatment or procedure" width="25"/>
								<column_definition label="Month/Year" width="10"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="Regarding the treatment or procedures you have undergone, what is your general subjective impression of the experience? (In your own words)">
						<free_form_response height="4"/>
					</question>
					<question mandatory="true" prompt="Regarding the treatment or procedures, how would you rate your overall satisfaction with the outcome?  (1=not at all satisfied, 10=very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever taken a platelet inhibitor medication (Ticlid, aspirin,dopidogerl, etc.) for the treatment or prevention of blood clots?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever taken a platelet inhibitor medication for the treatment or prevention of blood clots, please provide the following information for each type of platelet inhibitor.  Please indicate if you have experienced any adverse (abnormal) reactions (hives, fever, breathing difficulties, etc.).">
						<table_response initial_rows_to_display="3" add_row_increment="1">
							<column_definitions>
								<column_definition label="Name of platelet inhibitor medication" width="25"/>
								<column_definition label="Dosage" width="10"/>
								<column_definition label="Date started" width="20"/>
								<column_definition label="How long taken" width="20"/>
								<column_definition label="How taken (pills, IV, etc.)" width="20"/>
								<column_definition label="Adverse reactions, if any" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever taken an anticoagulant (blood thinner) medication (Refludan, coumadin, heparin, low molecular weight heparin, etc.) for treatment or prevention of blood clots?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please provide the following information for each type of anticoagulant.  Please indicate if you have experienced any adverse (abnormal) reactions (hives, fever, breathing difficulties, etc.).">
						<table_response initial_rows_to_display="3" add_row_increment="1">
							<column_definitions>
								<column_definition label="Name of anticoagulant" width="25"/>
								<column_definition label="Dosage" width="10"/>
								<column_definition label="Date started" width="20"/>
								<column_definition label="How long taken" width="20"/>
								<column_definition label="How taken (pills, IV, etc.)" width="20"/>
								<column_definition label="Adverse reactions, if any" width="30"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="false" prompt="If you are currently taking a prescription anticoagulant, please record below your three most recent coagulation studies.  (Be sure to record the medication dosage change, if applicable, for example, 'coumadin increased to 10mg per day.'">
						<table_response initial_rows_to_display="3" add_row_increment="1">
							<column_definitions>
								<column_definition label="Name of anticoagulant" width="25"/>
								<column_definition label="Blood test name (PT/ INR, PTT, etc)" width="20"/>
								<column_definition label="Blood test result" width="20"/>
								<column_definition label="Date test done" width="10"/>
								<column_definition label="Dosage change, if any" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been treated with a thrombolytic (clot dissolver) agent  (t-PA, streptokinase, urokinase, etc.)">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been treated with a thrombolytic agent, please provide the following information for each type of thrombolytic you have taken.  Please indicate if you have experienced any adverse (abnormal) reactions (hives, fever, breathing difficulties, etc.).">
						<table_response initial_rows_to_display="3" add_row_increment="1">
							<column_definitions>
								<column_definition label="Name of thrombolytic" width="25"/>
								<column_definition label="Month/Year" width="10"/>
								<column_definition label="Reason for administration" width="30"/>
								<column_definition label="Adverse reaction, if any" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding the treatment of your current condition?  (surgery, medical management, etc.)">
			<free_form_response height="2"/>
		</question>
		<question mandatory="true" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
				<column_definitions>
					<column_definition label="Physician name" width="30"/>
					<column_definition label="Specialty (vascular specialist, primary care, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
