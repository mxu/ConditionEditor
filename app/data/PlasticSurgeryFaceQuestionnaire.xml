<questionnaire>
	<question_group name="Diagnosis: Plastic Surgery Consultation Questions">
		<question mandatory="true" prompt="What is the primary problem related to your face for which you are seeking this plastic surgery consultation?">
			<free_form_response height="5"/>
		</question>
		&PLASTIC_COMMON1;
		<question mandatory="true" prompt="Has the patient had previous facial surgery?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please provide the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Year" width="8"/>
								<column_definition label="Type of procedure" width="20"/>
								<column_definition label="Not Sure" width="5"/>
								<column_definition label="Physician" width="15"/>
								<column_definition label="Hospital/Clinic" width="25"/>
								<column_definition label="City, State" width="35"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="List in order the things that bother the patient the most about his/her face and what the patient would like to correct (1 =highest priority, 5 =lowest priority)">
			<table_response add_row_increment="1">
				<column_definitions>
					<column_definition label="Area" width="30"/>
					<column_definition label="Priority" width="30"/>					
				</column_definitions>
				<table_data>
					<cell>Neck</cell>
					<cell/>					
				</table_data>
				<table_data>
					<cell>Jowls</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Jaw line</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Cheeks</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Upper eyelids</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Chin</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Forehead/Eyebrows</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		&PLASTIC_COMMON2;
	</question_group>
</questionnaire>
