<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<material_list>
	<instruction text="&lt;BR&gt; &lt;b&gt; The following list of medical information will also be required in order to proceed with your request for a second opinion consultation:&lt;/b&gt;"/>
	<material id="Primary physician or specialist physician's last report" description="Report should contain current physical assessment of the patient's condition and description of current signs and symptoms. This can be written by either patient's primary care physician &lt;b&gt;or&lt;/b&gt; the physician who diagnosed or is treating patient's condition." mandatory="true"/>
	<material id="Physician's letters" description="Copies of all letters sent to you by your physician(s) of last visit(s), if received." mandatory="true"/>
	<material id="Doctor's notation of medications" description="Note should clearly indicate current listing of all medications (prescription, over the counter and vitamins)." mandatory="true"/>
	<material id="Operative reports" description="Reports are required for all relevant surgeries/biopsies." mandatory="true"/>
	<material id="Physician's treatment reports" description="Reports of any treatments received for this diagnosis (chemotherapy, radiation therapy, etc). If prior chemotherapy was used, list all agents (including hormone therapy).  If radiation therapy was used, a copy of the completion note will be required. Significant toxicities and response to the therapy should be described." mandatory="true"/>
	<material id="Discharge summaries" description="Discharge summaries from any recent (within one year) hospitalizations." mandatory="true"/>
	<instruction text="&lt;BR&gt;  &lt;B&gt;The following radiologic and diagnostic studies done in the last 3 years will be required.  The films copied to compact disc (CD) and the study report will be needed, where indicated. &lt;/B&gt;"/>
	<material id="Brain MRI" description="Reports and actual films" mandatory="true"/>
	<material id="CT Scan of head" description="Reports and actual films." mandatory="true"/>
	<material id="Current blood work" description="Laboratory tests from all blood tests." mandatory="true"/>
	<material id="Current urine tests" description="Laboratory reports from all urine tests." mandatory="true"/>
	<material id="Electroencephalogram (EEG)" description="Reports and tracings." mandatory="true"/>
	<material id="Audiogram (hearing test)" description="Report of audiogram testing." mandatory="true"/>
	<material id="Spinal Tap" description="Written report." mandatory="true"/>
	<material id="Muscle Biopsy" description="Pathology report and actual slides (if done)." mandatory="true"/>
	<material id="Epilepsy Monitoring" description="Reports  and tracings (if done)." mandatory="true"/>
	<material id="Echocardiogram" description="Written report (if done)." mandatory="true"/>
	<material id="Evoked potential testing" description="Written report (if done)." mandatory="true"/>
	<material id="Tensilon (edophonium) test" description="Report of tensilon testing (if done)." mandatory="true"/>
	<material id="Evoked potential testing" description="Report of evoked potential testing (if done)." mandatory="true"/>
	<instruction text="&lt;BR&gt; &lt;b&gt; The following list of medical information although not mandatory, are optional if done. Radiology films must be copied to compact disc (CD) for submission. &lt;/b&gt;"/>
	<material id="Other X-rays" description="Reports and films from any other X-rays (if done)" mandatory="true"/>
	<material id="Other" description="Any other medical information you or your physician may feel is pertinent to this consultation." mandatory="false"/>
	&MATERIAL_LIST_CLOSING_INSTRUCTION;
</material_list>