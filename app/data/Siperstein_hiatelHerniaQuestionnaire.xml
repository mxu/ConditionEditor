<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="As related to your current problem (condition for which you are seeking a second opinion), how was your diagnosis made? (choose all that apply).">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="X-rays"/>
				<selection selected="false" text="CT scan"/>
				<selection selected="false" text="MRI scan"/>
				<selection selected="false" text="Barium swallow"/>
				<selection selected="false" text="Esophagoscopy"/>
				<selection selected="false" text="Ultrasound"/>
				<selection selected="false" text="Nuclear scan"/>
				<selection selected="false" text="24 hour esophageal PH monitoring"/>
				<selection selected="false" text="Blood Work"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please list:">
						<free_form_response/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="When was your diagnosis made?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="What is the diagnosis?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="What type of hiatal hernia have you been told you have? (if unsure, please indicate)">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="When were you last examined by your physician  for this condition?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="Do you feel as if your general health has deteriorated as a result of this condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="For how long have you had this problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Less than a month"/>
				<selection selected="false" text="1 - 3 months"/>
				<selection selected="false" text="4 - 6 months"/>
				<selection selected="false" text="7 - 12 months"/>
				<selection selected="false" text="Greater than 12 months"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are your symptoms?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has the condition for which you are seeking a second opinion been previously treated?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If the condition for which you are seeking a second opinion has been previously treated, please describe all treatments you have undergone in detail below:">
						<free_form_response height="10"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you experiencing any pain or discomfort?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are experiencing any pain or discomfort, where is the pain located?">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Please rate your pain on a scale of 1 - 10 below, with 1 being minimal discomfort and 10 being the worst pain:">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst pain"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate Pain"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal pain"/>
						</item_response>

					</question>
					<question mandatory="true" prompt="If you are experiencing any pain or discomfort, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you experiencing heartburn?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are experiencing heartburn, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you experiencing regurgitation (vomiting)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are experiencing regurgitation, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you ever experience hematemesis (vomiting of blood)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you ever experience hematemesis, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you experiencing difficulty swallowing?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are experiencing difficulty swallowing, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a history upper gastrointestinal (GI) bleeding?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have a history (GI) bleeding, please provide the details of the bleeding and how it was treated?">
						<free_form_response height="10"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever noticed that your stools (bowel movements) have blood or dark tarry color?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever noticed that your stools have blood or dark tarry color, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have varices (enlarged veins) of the esophagus and / or stomach?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have varices of the esophagus and / or stomach, have you experienced variceal bleeding?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If you have experienced variceal bleeding, when?">
									&MONTH_YEAR_TABLE_RESPONSE;
								</question>
							</selection>
						</item_response>
					</question>
					<question mandatory="true" prompt="If you have experienced variceal bleeding, how were the bleeding varices treated? (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Sclerotherapy"/>
							<selection selected="false" text="Band ligation"/>
							<selection selected="false" text="TIPS (Transjugular Portosystemic Shunting)"/>
							<selection selected="false" text="Surgery"/>
							<selection selected="false" text="None of the above"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please provide details:">
									<free_form_response height="8"/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you experience fatigue (tiredness) compared to others in your age group?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you experience fatigue compared to others in your age group, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you experience weakness?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you experience weakness, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you experience loss of appetite?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you experience loss of appetite, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you recently had an unintentional weight loss greater than 10 pounds / 5 kilograms?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you recently had an unintentional weight loss greater than 10 pounds / 5 kilograms, how much (in pounds / kilograms) and over what period of time?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Pounds / kilograms" width="15"/>
								<column_definition label="Period of time" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you currently experiencing any other symptoms not listed above?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you currently are experiencing any other symptoms not listed above, please list/describe:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding treatment of your current condition (surgery, medical management, etc.)?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
				<column_definitions>
					<column_definition label="Physician name" width="30"/>
					<column_definition label="Specialty (primary care physician, surgeon, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
