<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Has your present problem been diagnosed as a benign tumor?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not Sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question prompt="If your present problem been diagnosed as a benign tumor, how was your diagnosis made? (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Biopsy"/>
							<selection selected="false" text="Surgery"/>
							<selection selected="false" text="X-ray"/>
							<selection selected="false" text="CT"/>
							<selection selected="false" text="MRI"/>
							<selection selected="false" text="Blood Work"/>
							<selection selected="false" text="Bone Scan"/>
							<selection selected="false" text="Unknown"/>
							<selection selected="false" text="Other">
								<question prompt="If other, please specify">
									<free_form_response height="2"/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="When was your tumor diagnosis made?">
			<table_response initial_rows_to_display="1" add_row_increment="0" row_height="1">
				<column_definitions>
					<column_definition label="Month / Year" pct="100"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What is the diagnosis?">
			<free_form_response/>
		</question>
		<question mandatory="true" prompt="If known, what is the location of your tumor?">
			<free_form_response/>
		</question>
		<question mandatory="true" prompt="When were you last examined by your physician?">
			<table_response initial_rows_to_display="1" add_row_increment="0" row_height="1">
				<column_definitions>
					<column_definition label="Month / Year" pct="100"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="How long have you had this problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Less than 1 month"/>
				<selection selected="false" text="1-3 months"/>
				<selection selected="false" text="4-6 months"/>
				<selection selected="false" text="7-12 months"/>
				<selection selected="false" text="Greater than 12 months"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is there a mass?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If there is a mass, how large is it?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Less than 5cm (2 inches)"/>
							<selection selected="false" text="5-10cm (2-4 inches)"/>
							<selection selected="false" text="Greater than 10cm (4 inches)"/>
							<selection selected="false" text="Not Sure"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Is the mass?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="Hard"/>
							<selection selected="false" text="Soft"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Is the mass getting?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="Larger"/>
							<selection selected="false" text="Smaller"/>
							<selection selected="false" text="Staying the same"/>
							<selection selected="false" text="Fluctuating in size"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you experiencing pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are experiencing pain, indicate the location of the pain:">
						<free_form_response/>
					</question>
					<question mandatory="true" prompt="Please rate your pain on he scale below: (1= minimal pain, 10= severe pain)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst pain"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate Pain"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal pain"/>
						</item_response>

					</question>
					<question mandatory="true" prompt="Do you have pain at night while you are resting?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="false" prompt="If you have pain at night while you are resting, does it prevent you from falling asleep or does it wake you up during the night?">
									<item_response drop_down_style="false" single_response="true">
										<selection selected="false" text="No"/>
										<selection selected="false" text="Yes"/>
									</item_response>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
	
					<question mandatory="true" prompt="Have you had any of the following studies?  If so, when?">
						<table_response initial_rows_to_display="2" add_row_increment="2" row_height="1">
							<column_definitions>
								<column_definition label="Study" pct="70"/>
								<column_definition label="Month" pct="15"/>
								<column_definition label="Year" pct="15"/>
							</column_definitions>
							<table_data>
								<cell>CT</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>MRI</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Other x-rays</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Ultrasound</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Bone Scan</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Other</cell>
								<cell/>
								<cell/>
							</table_data>
						</table_response>
					</question>
				
		<question prompt="Please indicate below what treatments you have received so far for your tumor: (choose all boxes that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Surgery"/>
				<selection selected="false" text="Radiation therapy"/>
				<selection selected="false" text="Chemotherapy"/>
				<selection selected="false" text="Other">
					<question prompt="If other, please specify:">
						<free_form_response/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a prior history of tumor(s)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have a prior history of tumor(s), do you know the type of tumor(s)?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If you know the type of tumor(s), indicate the type of tumor(s):">
									<free_form_response/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a diagnosis of cancer, either now or in the past?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have had a diagnosis of cancer, what type of cancer did you have?">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Bone"/>
							<selection selected="false" text="Soft tissue (muscle, fat, fibrous)"/>
							<selection selected="false" text="Lung"/>
							<selection selected="false" text="Melanoma"/>
							<selection selected="false" text="Prostate"/>
							<selection selected="false" text="Unknown"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please specify:">
									<free_form_response/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="If you have a past history of cancer, please indicate the date of the diagnosis:">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="Have you undergone surgery / surgical procedure(s) for your current condition (one you are seeking opinion for)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone surgery / surgical procedure(s) for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Surgery/procedure" width="25"/>
								<column_definition label="Month/Year" width="20"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone surgical treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone chemotherapy for your current condition (one you are seeking opinion for)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone chemotherapy for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Name of chemotherapy" width="25"/>
								<column_definition label="Dosage" width="10"/>
								<column_definition label="Number of cycles (if known)" width="10"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone chemotherapy treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the chemotherapy, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone radiation therapy for your current condition (one you are seeking opinion for)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone radiation therapy for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of radiation" width="25"/>
								<column_definition label="Dosage (if known)" width="10"/>
								<column_definition label="Number of treatments" width="10"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Physician" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone radiation therapy treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the radiation therapy treatment, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone experimental or alternative therapy for your current condition (one you are seeking opinion for)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone experimental or alternative therapy for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of treatment" width="25"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone experimental or alternative treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the experimental or alternative treatment, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
