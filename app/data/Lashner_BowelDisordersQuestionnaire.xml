<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Have you been tested or treated for this problem?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="if you have been tested or treated for this problem, please provide the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Test or treatment" width="20"/>
								<column_definition label="Date of &lt;BR&gt; treatment" width="15"/>
								<column_definition label="Physician" width="25"/>
								<column_definition label="Hospital/Clinic" width="25"/>
								<column_definition label="City, State" width="25"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="Regarding the treatment you have received for your condition, what is your general subjective impression of the experience? (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the treatment, how would you rate your overall satisfaction? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="Please indicate below if you have a family history of any of the following.  Be sure to provide the family member's relationship (brother, aunt, etc.):">
			<table_response add_row_increment="2" row_height="2">
				<column_definitions>
					<column_definition label="Problem" width="25"/>
					<column_definition label="Relationship &lt;BR&gt; (brother, aunt, etc.)" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Liver problems</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Colitis</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Colon cancer</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other cancers (please list below)</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Do YOU have a history of the following? (choose all that apply)">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you do have a history of the following, please indicate below:">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Colon polyps"/>
							<selection selected="false" text="Colon cancer"/>
							<selection selected="false" text="Other cancer"/>
							<selection selected="false" text="Radiation/Chemotherapy"/>
							<selection selected="false" text="Crohn&apos;s disease/Ulcerative colitis"/>
