			</table_response>
		</question>
		<question mandatory="true" prompt="Have you recently had an unintentional weight loss > 10 pounds / 5 kilograms?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you recently have had an unintentional weight loss > 10 pounds / 5 kilograms, please provide the following information:">
						<table_response initial_rows_to_display="1" add_row_increment="0" row_height="1">
							<column_definitions>
								<column_definition label="Pounds / kilograms" width="10"/>
								<column_definition label="Over what period (years/months)" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you recently had an unintentional weight gain > 10 pounds / 5 kilograms?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
