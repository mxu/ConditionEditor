						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Brace">
					<question mandatory="true" prompt="Effect:">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
