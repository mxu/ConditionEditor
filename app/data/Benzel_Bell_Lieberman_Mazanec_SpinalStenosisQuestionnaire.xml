<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Do you have a history of any of the following?  (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Psoriasis"/>
							<selection selected="false" text="Crohn's disease"/>
							<selection selected="false" text="Ulcerative colitis"/>
							<selection selected="false" text="Chronic fatigue syndrome"/>
							<selection selected="false" text="Osteoarthritis"/>
							<selection selected="false" text="Rheumatoid arthritis"/>
							<selection selected="false" text="Fibromyalgia"/>
							<selection selected="false" text="None of the above"/>
						</item_response>
		</question>
				
		<question mandatory="true" prompt="Do you have a family history of back and / or neck problems?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you had neck or back problems?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have had neck or back problems, when?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
					<question mandatory="true" prompt="If you have had neck or back problems, what was the cause of your neck or back problem?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Work injury"/>
							<selection selected="false" text="Road traffic accident"/>
							<selection selected="false" text="Sports injury"/>
							<selection selected="false" text="No specific injury"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please list:">
									<free_form_response height="2"/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been told you have poor circulation (peripheral vascular disease)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have any leg pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have any leg pain, does standing affect your leg pain? (choose one)">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No, the pain does not change"/>
							<selection selected="false" text="Yes, the pain decreases"/>
							<selection selected="false" text="Yes, the pain increases">
								<question mandatory="true" prompt="If the leg pain increases, approximately how long can you stand before you feel the increase in pain?">
									<item_response drop_down_style="false" single_response="true">
										<selection selected="false" text="less than 5 minutes"/>
										<selection selected="false" text="5-15 minutes"/>
										<selection selected="false" text="16-30 minutes"/>
										<selection selected="false" text="greater than 30 minutes"/>
									</item_response>
								</question>
							</selection>
						</item_response>
					</question>
					<question mandatory="true" prompt="If you have any leg pain, does walking affect your leg pain?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No, the pain does not change"/>
							<selection selected="false" text="Yes, the pain decreases"/>
							<selection selected="false" text="Yes, the pain increases">
								<question mandatory="true" prompt="If the pain increases when walking, how long can you walk before you feel leg discomfort?">
									<item_response drop_down_style="false" single_response="true">
										<selection selected="false" text="less than 5 minutes"/>
										<selection selected="false" text="5-15 minutes"/>
										<selection selected="false" text="16-30 minutes"/>
										<selection selected="false" text="greater than 30 minutes"/>
									</item_response>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have any of the following problems with your legs?  (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Weakness"/>
				<selection selected="false" text="Heaviness"/>
				<selection selected="false" text="Numbness/tingling"/>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Approximately how far are you able to walk without assistance? (feet, blocks, etc)">
			<free_form_response height="2"/>
		</question>
		<question mandatory="true" prompt="Why do you stop walking?  (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Fatigue"/>
				<selection selected="false" text="Back pain"/>
				<selection selected="false" text="Leg pain"/>
				<selection selected="false" text="Weakness"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please describe:">
						<free_form_response height="2"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have any back pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have any back pain, does your back pain tend to improve with moderate physical activity?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Which areas of your body have the worse pain? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Neck"/>
				<selection selected="false" text="Back"/>
				<selection selected="false" text="Arm"/>
				<selection selected="false" text="Leg"/>
				<selection selected="false" text="N/A"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please indicate:">
						<free_form_response height="2"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="How long have you had this problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="less than 1 month"/>
				<selection selected="false" text="1-3 months"/>
				<selection selected="false" text="4-6 months"/>
				<selection selected="false" text="7-12 months"/>
				<selection selected="false" text="greater than 12 months"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the problem? (choose one)">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Whom do you think is at fault for your current neck / back condition? (choose one)">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Yours"/>
				<selection selected="false" text="Your employer's"/>
				<selection selected="false" text="A co-worker's"/>
				<selection selected="false" text="Another person's"/>
				<selection selected="false" text="Nobody's"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you had previous back (spine) surgery?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have had previous back (spine) surgery, please provide the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Month/Year" width="18"/>
								<column_definition label="Preoperative symptoms" width="40"/>
								<column_definition label="Type of &lt;BR&gt; surgery" width="30"/>
								<column_definition label="Did symptoms improve, &lt;BR&gt; worsen or&lt;BR&gt; stay the same?" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please indicate which of the following activities increase your pain: (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Exercise"/>
				<selection selected="false" text="Sitting"/>
				<selection selected="false" text="Walking"/>
				<selection selected="false" text="Standing"/>
				<selection selected="false" text="Twisting"/>
				<selection selected="false" text="Bending forward"/>
				<selection selected="false" text="Bending backward"/>
				<selection selected="false" text="Coughing"/>
				<selection selected="false" text="Sneezing"/>
				<selection selected="false" text="Sleeping"/>
				<selection selected="false" text="Walking up stairs"/>
				<selection selected="false" text="Walking down stairs"/>
				<selection selected="false" text="N/A"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please indicate:">
						<free_form_response height="2"/>
					</question>
				</selection>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please indicate which of the following activities decrease your pain: (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Lying down"/>
				<selection selected="false" text="Sitting"/>
				<selection selected="false" text="Walking"/>
				<selection selected="false" text="Standing"/>
				<selection selected="false" text="Manipulation"/>
				<selection selected="false" text="Physical therapy"/>
				<selection selected="false" text="Pain pills"/>
				<selection selected="false" text="Muscle relaxants"/>
				<selection selected="false" text="Anti-inflammatories"/>
				<selection selected="false" text="N/A"/>
				<selection selected="false" text="Other medications">
					<question mandatory="true" prompt="If other medications, please indicate:">
						<free_form_response height="2"/>
					</question>
				</selection>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have problems passing your urine?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have problems passing your urine, have they developed since the onset of your pain problem?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have problems with constipation?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have problems with constipation, have they developed since the onset of your pain problem?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have problems with diarrhea?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have problems with diarrhea, have they developed since the onset of your pain problem?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
