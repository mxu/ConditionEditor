<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
   
		<question mandatory="true" prompt="What is the primary (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion.">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Which knee is currently affected ? ">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Right Knee"/>
				<selection selected="false" text="Left Knee"/>
				<selection selected="false" text="Both Knees"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a family history of knee problems?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a history of any of the following? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Chronic fatigue syndrome"/>
				<selection selected="false" text="Crohn's disease"/>
				<selection selected="false" text="Fibromyalgia"/>
				<selection selected="false" text="Osteoarthritis"/>
				<selection selected="false" text="Psoriasis"/>
				<selection selected="false" text="Rheumatoid arthritis"/>
				<selection selected="false" text="Ulcerative colitis"/>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you had other hip and / or knee problems prior to the development of your current problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have had other hip and / or knee problems, please provide the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="1">
							<column_definitions>
								<column_definition label="Diagnosis" width="25"/>
								<column_definition label="Month/Year" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>                
		<question mandatory="true" prompt="How long have you had the current problem (condition you are seeking second opinion for)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="&gt; 1 month"/>
				<selection selected="false" text="1-3 months"/>
				<selection selected="false" text="4-6 months"/>
				<selection selected="false" text="7-12 months"/>
				<selection selected="false" text="> 12 months"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="What is the cause of your current knee problem (if known)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No specific injury"/>
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Work injury"/>
				<selection selected="false" text="Road traffic accident"/>
				<selection selected="false" text="Sports injury"/>
				<selection selected="false" text="Fall"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please list:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
                         
		<question mandatory="true" prompt="If your current knee problem is due to an injury, please describe the circumstances of the injury:">
			<free_form_response height="2"/>
		</question>
		<question mandatory="true" prompt="Have you had previous surgery on your knee(s)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have had previous surgery on your knee(s), please provide the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Month/Year" width="20"/>
								<column_definition label="Surgery/Procedure" width="25"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
								<column_definition label="Rate success of surgery &lt;BR&gt;(1=not at all successful, 10=very successful)" width="30"/>
							</column_definitions>
						</table_response>
					</question>                                         
					<question mandatory="true" prompt="If you have had surgery, what is your general subjective impression of the experience and outcome of the procedure?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the surgery, how would you rate your overall satisfaction with the experience? (1=not at all satisfied, 10=very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
        
        
		<question mandatory="true" prompt="Which of the following BEST describes your usual level of activity (functioning ability)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="I am mostly wheelchair bound"/>
				<selection selected="false" text="I can comfortably walk around the house"/>
				<selection selected="false" text="I can comfortably walk around the neighborhood"/>
				<selection selected="false" text="I frequently need to use a cane, crutches, walker or other assistive device"/>
				<selection selected="false" text="I have trouble with self care such as bathing, dressing or housework"/>
				<selection selected="false" text="I can generally walk more than a mile"/>
				<selection selected="false" text="I can participate in recreational sports or activities"/>
				<selection selected="false" text="I can participate in vigorous sports and activities"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you regularly use any of the following assistive devices? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Cane"/>
				<selection selected="false" text="Crutches"/>
				<selection selected="false" text="Walker"/>
				<selection selected="false" text="Wheelchair"/>
				<selection selected="false" text="Brace"/>
				<selection selected="false" text="AFO (Ankle foot arthrosis)"/>
				<selection selected="false" text="None of the above"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please specify:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Regarding the mobility of your affected joint, please indicate below which of the following you are able to do: (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Raise your leg off the bed"/>
				<selection selected="false" text="Walk up steps"/>
				<selection selected="false" text="Walk down steps"/>
				<selection selected="false" text="Squat down"/>
				<selection selected="false" text="Stand on tiptoes"/>
				<selection selected="false" text="Flex ankle"/>
				<selection selected="false" text="Straighten ankle out"/>
				<selection selected="false" text="Bend knee all the way"/>
				<selection selected="false" text="Straighten knee all the way"/>
				<selection selected="false" text="Get up from a chair which does not have arms"/>
			</item_response>
		</question>
		<question prompt="Are you experiencing any pain?" mandatory="true">
			<item_response drop_down_style="false" single_response="true">
				<selection text="No" selected="false"/>
				<selection text="Yes" selected="false">
					<question mandatory="true" prompt="If you are experiencing any pain, which area of your body has the worst pain?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Leg"/>
							<selection selected="false" text="Knee"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please specify:">
									<free_form_response height="2"/>
								</question>
							</selection>
						</item_response>
					</question>
					<question prompt="Please rate your pain (when it is at its worst) on the scale below: (1= minimal pain, 10= worst pain)" mandatory="true">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst pain"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate Pain"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal pain"/>
						</item_response>

					</question>
					<question mandatory="true" prompt="Does your pain disturb your sleep?">
						<item_response drop_down_style="false" single_response="true">
							<selection text="No" selected="false"/>
							<selection text="Yes" selected="false"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Do you need to get out of bed during the night because of your pain?">
						<item_response drop_down_style="false" single_response="true">
							<selection text="No" selected="false"/>
							<selection text="Yes" selected="false"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Does your pain tend to improve with moderate physical activity?">
						<item_response drop_down_style="false" single_response="true">
							<selection text="No" selected="false"/>
							<selection text="Yes" selected="false"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Please indicate which of the following activities increase your pain? (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Exercise"/>
							<selection selected="false" text="Sitting"/>
							<selection selected="false" text="Standing"/>
							<selection selected="false" text="Walking"/>
							<selection selected="false" text="Twisting"/>
							<selection selected="false" text="Coughing/sneezing"/>
							<selection selected="false" text="Sleeping"/>
							<selection selected="false" text="Walking up or down stairs"/>
							<selection selected="false" text="Getting up from chair"/>
							<selection selected="false" text="None of the above"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please list:">
									<free_form_response height="3"/>
								</question>
							</selection>
						</item_response>
					</question>
                    
					<question mandatory="true" prompt="Which of the following decrease your pain? (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Lying down"/>
							<selection selected="false" text="Sitting"/>
							<selection selected="false" text="Standing"/>
							<selection selected="false" text="Walking"/>
							<selection selected="false" text="Physical therapy"/>
							<selection selected="false" text="Pain pills"/>
							<selection selected="false" text="Muscle relaxants"/>
							<selection selected="false" text="Anti-inflammatory medications"/>
							<selection selected="false" text="None of the above"/>
							<selection selected="false" text="Other activities">
								<question mandatory="true" prompt="If other activities, please list:">
									<free_form_response height="3"/>
								</question>
							</selection>
							<selection selected="false" text="Other medications">
								<question mandatory="true" prompt="If other medications, please list:">
									<free_form_response height="3"/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
        
		<question mandatory="true" prompt="Is your affected joint stiff in the morning?">
			<item_response drop_down_style="false" single_response="true">
				<selection text="No" selected="false"/>
				<selection text="Yes" selected="false">
					<question mandatory="true" prompt="If your affected joint is stiff in the morning, how long does the stiffness last?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="0 - 30 min"/>
							<selection selected="false" text="31 - 60 min"/>
							<selection selected="false" text="> 60 min"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="Which of the following types of treatments have you had for your condition? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Hot packs/ice">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Massage">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Physical therapy">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Exercises">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Biofeedback">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Brace">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Injections (cortisone)">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Injections (viscosupplementation)">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Non-aspirin anti-inflammatory medications">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Glucosamine (medication)">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Anti-rheumatic medications such as gold injections, methyltrexate, etc.">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Pain medications">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Antibiotic medications">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please list:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you recently (past month) had any of the following symptoms? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Fever >100 F / 38 C"/>
				<selection selected="false" text="Night sweats"/>
				<selection selected="false" text="Chills/tremors"/>
				<selection selected="false" text="Swelling and/or redness in the affected knee"/>
				<selection selected="false" text="Affected knee warm or hot to the touch"/>
				<selection selected="false" text="None of the above"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please describe:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="In the past 6 months, have you been treated with an antibiotic (medication to fight infection)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you been treated with an antibiotic in the past 6 months, please provide the following information for each course of antibiotics (starting with the current or most recent treatment):">
						<table_response initial_rows_to_display="3" add_row_increment="2">
							<column_definitions>
								<column_definition label="Name of antibiotic" width="20"/>
								<column_definition label="Dosage" width="10"/>
								<column_definition label="How often taken (1x/day, etc.)" width="20"/>
								<column_definition label="When started (exact date)" width="23"/>
								<column_definition label="When finished (exact date)" width="23"/>
								<column_definition label="How taken (IV, oral, etc.)" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="When you bend your knee, do you hear or feel any of the following in the affected knee? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Snapping"/>
				<selection selected="false" text="Popping"/>
				<selection selected="false" text="Clicking"/>
				<selection selected="false" text="Creaking"/>
				<selection selected="false" text="Grating sound"/>
				<selection selected="false" text="None of the above"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please describe:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding your current treatment (surgery, medical treatment, etc.)?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="false" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="2" add_row_increment="0">
				<column_definitions>
					<column_definition label="Physician" width="20"/>
					<column_definition label="Specialty (Orthopedic surgeon, rheumatologist, etc.)" width="45"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
         
	</question_group>
</questionnaire>
