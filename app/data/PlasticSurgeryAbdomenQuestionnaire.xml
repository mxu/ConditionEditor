<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<!-- edited with XML Spy v4.4 U (http://www.xmlspy.com) by David Hotchkiss (IT) -->
<questionnaire>
	<question_group name="Diagnosis: Plastic Surgery Consultation Questions">
		<question mandatory="true" prompt="What is the primary problem related to the patient's abdomen for which you are seeking this plastic surgery consultation?">
			<free_form_response height="5"/>
		</question>
		&PLASTIC_COMMON1;
		<question mandatory="true" prompt="Has the patient had an abdominal surgery in the past?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please complete the chart below">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Year" width="8"/>
								<column_definition label="Type of procedure" width="20"/>
								<column_definition label="Not Sure" width="5"/>
								<column_definition label="Physician" width="15"/>
								<column_definition label="Hospital/Clinic" width="25"/>
								<column_definition label="City, State" width="35"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Does the patient have an abdominal hernia?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Does the patient have scars on his / her abdomen?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please explain">
						<free_form_response/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has the patient delivered any children in the past?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="N/A (Patient is a male)"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, how many?">
						<free_form_response/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Does the patient have excess abdominal skin?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, is the abdominal skin loose?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the patient's abdominal problem (the one you are seeking a consultation for) localized to the lower abdomen?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the patient's upper abdomen problematic?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Does the patient have excess fat in his / her hip area?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Does the patient have excess fat in his / her back area?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Does the patient have excess skin or fat extending to his / her hips?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the patient considering abdominoplasty?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Unsure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the patient considering liposuction?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Unsure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		
		&PLASTIC_COMMON2;
	</question_group>
</questionnaire>
