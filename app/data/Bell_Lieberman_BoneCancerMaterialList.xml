<material_list>	
	&MATERIAL_LIST_INTRODUCTORY_INSTRUCTION;
	&PHYSICIAN_LAST_REPORT;
	<material id="Doctor's notation of medications" description="Note should clearly indicate current listing of all medications (prescription, over the counter, vitamins)." mandatory="true"/>
	<material id="Physician's letters" description="Copies of all letters sent to you by your physician(s) of past visit(s), (if received)." mandatory="true"/>
	<material id="Surgical report(s)" description="Surgical reports of any and all prior back and neck surgeries." mandatory="true"/>
	<material id="Pathology" description="Pathology reports and glass slides from all previous surgeries and / or biopsies." mandatory="true"/>
	<material id="Discharge summary(s)" description="Discharge summary(s) from any recent (within one year) hospitalization(s)." mandatory="true"/>
