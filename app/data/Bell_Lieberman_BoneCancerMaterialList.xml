	<material id="Pelvic and/or sacroiliac joint x-rays" description="Report and films." mandatory="true"/>
	<material id="MRI (Magnetic resonance imaging) scan" description="Report and films." mandatory="true"/>
	<material id="CT (Computed tomogram) scan" description="Report and films." mandatory="true"/>
	<instruction text="&lt;BR&gt; &lt;b&gt; The following list of medical information, although not mandatory, should be included, if done: &lt;/b&gt;"/>
	<material id="Current blood work" description=" Within the last 6 months." mandatory="false"/>
	<material id="Bone scan" description="Report only." mandatory="false"/>
	<material id="Chest X-ray" description="Report only." mandatory="false"/>
	<material id="Discogram image (x-ray)" description="Report and films and Doctor's report of pain provocation aspects study, if done." mandatory="false"/>
	<material id="EMG (electromyogram)" description="Report only." mandatory="false"/>
	<material id="Myelogram" description="Report only." mandatory="false"/>
	<material id="Other" description="Any other medical information you or your physician may feel is important to this consultation." mandatory="false"/>
