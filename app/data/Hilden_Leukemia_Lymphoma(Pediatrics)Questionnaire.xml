<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your child's current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of how your child came to be diagnosed:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Does your child have or has your child had any other cancers or precancerous conditions?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child has your has had any other cancers or precancerous conditions, please specify below:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Condition (Diagnosis)" width="25"/>
								<column_definition label="Month/Year" width="10"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Type of treatment" width="25"/>
								<column_definition label="Hospital/Clinic" width="25"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="If your child has or has had any of the following, please provide month and year of diagnosis.">
			<table_response add_row_increment="2" row_height="2">
				<column_definitions>
					<column_definition label="Condition" width="30"/>
					<column_definition label="Date of diagnosis" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Hemolytic anemia</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Immune thrombocytopenia</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Red cell aplasia</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other anemia (Please list below)</cell>
					<cell/>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Do you have any other children?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you do have any other children, please provide the following information about all of your other children, if applicable:">
						<table_response initial_rows_to_display="4" add_row_increment="2" row_height="1">
							<column_definitions>
								<column_definition label="Child (boy/girl)" width="25"/>
								<column_definition label="Age" width="15"/>
								<column_definition label="Current state of health&lt;BR&gt; (if known)" width="27"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a family history of cancer?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have a family history of cancer, please provide the following information regarding your family history. Please indicate if the family member is related on the maternal or fraternal side, if applicable.">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Family member's&lt;BR&gt; relationship to child" width="20"/>
								<column_definition label="Maternal/paternal" width="20"/>
								<column_definition label="Type of cancer" width="25"/>
								<column_definition label="Age at diagnosis (if known)" width="22"/>
								<column_definition label="Current state of health&lt;BR&gt; (if known)" width="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What type of lymphoma or leukemia was diagnosed?">
			<free_form_response height="1"/>
		</question>
		<question mandatory="true" prompt="How was your child's current problem first discovered?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Routine exam"/>
				<selection selected="false" text="Exam for bleeding/brusing or other symptoms"/>
				<selection selected="false" text="Enlarged lymph node and/or spleen"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please provide details:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="How was your child's diagnosis confirmed? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Blood tests"/>
				<selection selected="false" text="Bone marrow biopsy"/>
				<selection selected="false" text="Lymph node biopsy"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please provide details:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What was your child's date of diagnosis?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="When was your child last examined by his/her physician?:">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="Please list below all imaging/diagnostic studies your child has had.  Please include ALL studies from list below, including pre and post treatments, and dates done:">
			<table_response add_row_increment="2">
				<column_definitions>
					<column_definition label="Study" width="35"/>
					<column_definition label="Month" width="15"/>
					<column_definition label="Year" width="15"/>
				</column_definitions>
				<table_data>
					<cell>X-rays</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>CT</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>MRI</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Chest x-ray</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>PET scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Gallium scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Bone marrow test</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Spinal tap test</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other (Please list below)</cell>
					<cell/>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Has your child had any surgical treatment for his / her condition?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child had any surgical treatment for his / her condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Surgery/Procedure" width="25"/>
								<column_definition label="Month/Year" width="20"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If your child has undergone surgical treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>                 
		<question mandatory="true" prompt="Is your child currently receiving chemotherapy treatments?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child is currently receiving chemotherapy treatments, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Name of chemotherapy" width="25"/>
								<column_definition label="Number of cycles (if known)" width="20"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Physician" width="10"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
								<column_definition label="Side effects (if any)" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If your child currently undergoing chemotherapy, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="If your child is currently undergoing chemoptherapy, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has your child had any previous chemotherapy (prior to his/her current condition)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child has had any previous chemotherapy, please provide addtional information below:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Name of chemotherapy" width="25"/>
								<column_definition label="Number of cycles&lt;BR&gt; (if known)" width="15"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Physician" width="10"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
								<column_definition label="Side effects (if any)" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="Regarding the previous chemotherapy, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the previous chemotherapy, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">  
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>              
		<question mandatory="true" prompt="Has your child undergone any radiation therapy treatments?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child has undergone any radiation therapy treatments, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of radiation" width="25"/>
								<column_definition label="Dosage (if known)" width="15"/>
								<column_definition label="Number of&lt;BR&gt; treatments" width="12"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Physician" width="10"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If your child has undergone radiation therapy treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="If your child has undergone radiation therapy treatment, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>        
		<question mandatory="true" prompt="Has your child undergone experimental or alternative treatments for his / her current condition?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child has undergone experimental or alternative treatments for his / her current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of treatment" width="25"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Physician" width="10"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If your child has undergone experimental or alternative treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="If your child has undergone experimental or alternative treatment, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>                 
		<question mandatory="true" prompt="Does your child have enlarged lymph nodes?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child has enlarged lymph nodes, where are the enlarged lymph nodes? (armpit, groin, etc.)">
						<free_form_response height="1"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Does your child have an enlarged spleen?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child has an enlarged spleen, please indicate date spleen enlargement was diagnosed:">
					&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is your child currently having any other symptoms or problems?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child is currently having any other symptoms or problems, please describe:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
        <question mandatory="true" prompt="What has been recommended regarding future therapy for your child?  (Chemotherapy, bone marrow transplant, etc.)">
			<free_form_response height="3"/>
		</question>
		<question mandatory="false" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
				<column_definitions>
					<column_definition label="Physician name" width="30"/>
					<column_definition label="Type of doctor (surgeon, oncologist, primary care, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What have the doctors stated regarding your child's prognosis (forecast of the probable course of the disesase)?">
			<free_form_response height="3"/>
		</question>
		<question mandatory="true" prompt="What are the primary hopes and expectations that you have regarding this consultation?">
			<free_form_response height="3"/>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your child's condition?">
			<free_form_response height="10"/>
		</question>        
	</question_group>
</questionnaire>
