								<column_definition label="Type of surgery (procedure)" width="20"/>
								<column_definition label="Year" width="4"/>
								<column_definition label="Physician" width="40"/>
								<column_definition label="Hospital" width="30"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
