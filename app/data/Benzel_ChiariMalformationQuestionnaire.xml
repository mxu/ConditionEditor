<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>

<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Do you have a family history of back and / or neck problems?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been diagnosed with Chronic Fatigue Syndrome?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been diagnosed with Chronic Fatigue Syndrome, when?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been diagnosed with Fibromyalgia?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been diagnosed with Fibromyalgia, when?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever experienced a head injury or other trauma?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever experienced a head injury or other trauma, please describe how you were injured:">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="If you have ever experienced a head injury or other trauma, were you injured?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been diagnosed with cancer?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been diagnosed with cancer, what type of cancer?  Please provide biopsy results (if known).">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you been diagnosed with sleep apnea (stop breathing while asleep)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you ever experience episodes of quadriparesis (short periods of paralysis)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you ever experience episodes of quadriparesis, how often (daily, weekly, monthly etc.)?   In what location (arms, legs, fingers, etc.)?">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you ever experience a burning pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you ever experience a burning pain, where is the burning located?">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you ever experience numbness?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you ever experience numbness, where is the numbness located?">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have weakness?">
