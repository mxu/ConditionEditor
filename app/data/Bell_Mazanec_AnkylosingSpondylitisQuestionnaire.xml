						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No Change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Body mechanics training">
					<question mandatory="true" prompt="What was the effect of the treatment?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No Change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Exercises">
					<question mandatory="true" prompt="What was the effect of the treatment?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No Change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Traction">
					<question mandatory="true" prompt="What was the effect of the treatment?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No Change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Bedrest">
					<question mandatory="true" prompt="What was the effect of the treatment?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No Change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Manipulation">
					<question mandatory="true" prompt="What was the effect of the treatment?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No Change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Biofeedback">
					<question mandatory="true" prompt="What was the effect of the treatment?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No Change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Injections">
					<question mandatory="true" prompt="What was the effect of the treatment?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No Change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Brace">
					<question mandatory="true" prompt="What was the effect of the treatment?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No Change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Medication">
					<question mandatory="true" prompt="What was the effect of the treatment?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No Change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="What was the effect of the treatment?">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please list all diagnostic tests (imaging studies) you have undergone. For each study, please provide date and location: ">
			<table_response add_row_increment="2" row_height="3">
				<column_definitions>
					<column_definition label="Study" width="20"/>
					<column_definition label="Date (Month / Year)" width="12"/>
					<column_definition label="Hospital/Clinic" width="25"/>
					<column_definition label="City, State" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Spine X-rays</cell>
