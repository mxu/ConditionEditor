<material_list>
  &MATERIAL_LIST_INTRODUCTORY_INSTRUCTION;
	<material id="Primary or  specialist physician's  last report" description="Report should contain current physical assessment of the patient's condition and description of current signs and symptoms. This can be written by either the primary care  physician or the physician who diagnosed or is treating the condition." mandatory="true"/>
	<material id="Doctor's letters" description="Copies of all letters sent to you by patient's physician." mandatory="true"/>
	<material id="Office Notes" description="Copies of all office notes for clinic visits pertinent to condition." mandatory="true"/>
	<material id="Specialist Physician's report" description="Report of evaluation by specialist (Neurologist, Otolaryngologist, etc) if applicable." mandatory="true"/>
	<material id="Doctor's notation of medications" description="Note should clearly indicate current listing of all patient's medications (prescription, over the counter, vitamins)." mandatory="true"/>
	<material id="Operative reports" description="Reports are required for all ear, neck, and brain surgeries" mandatory="true"/>
	<material id="Discharge summaries" description="Discharge summaries from any recent (within one year) hospitalizations." mandatory="true"/>
	<instruction text="&lt;BR&gt;&lt;B&gt;  The following radiologic and diagnostic studies done in the last 3 years will be required.  The films copied to compact disc (CD) and the study report will be needed, where indicated. &lt;/B&gt;"/>
	<material id="MRI Scan of Head" description="Reports for all completed studies." mandatory="true"/>
	<material id="CT Scan of Head" description="Reports for all completed studies." mandatory="true"/>
	<material id="MRA and/or MRV of the Head" description="Reports for all completed studies." mandatory="true"/>
	<material id="Other Imaging related to Headaches" description="Reports for all completed studies." mandatory="true"/>
	<instruction text="&lt;BR&gt;&lt;B&gt;  The following list of medical information although not mandatory, are optional and highly recommended if done: &lt;/B&gt;"/>
	<material id="Current Blood work (within last 6 months)" description="Laboratory Blood Test reports." mandatory="false"/>
	<material id="MRI Scan of Spine" description="Report of study." mandatory="false"/>	   
	<material id="Electroencephalogram (EEG)" description="Report only of completed study." mandatory="false"/>
	<material id="EKG" description="Report of study." mandatory="false"/>
	<material id="Other medical information" description="Any other medical information you or your physician may feel is pertinent to this consultation." mandatory="false"/>
  &MATERIAL_LIST_CLOSING_INSTRUCTION;
