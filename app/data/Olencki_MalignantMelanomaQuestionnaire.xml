<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Do you have a family history of any of the following?  (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Abnormal moles"/>
				<selection selected="false" text="Eczema"/>
				<selection selected="false" text="Dermatitis"/>
				<selection selected="false" text="Thick scars or keloids"/>
				<selection selected="false" text="Skin cancer"/>
				<selection selected="false" text="Malignant melanoma"/>
				<selection selected="false" text="None of the above"/>
				<selection selected="false" text="Other skin problems">
					<question mandatory="true" prompt="If other, please indicate below.">
						<free_form_response height="2"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What is the diagnosis?">
			<free_form_response height="4"/>
		</question>
		<question mandatory="true" prompt="When was your diagnosis made?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="When were you last examined by your physician for your current condition (one you are requesting a second opinion for)?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="Where is the malignant melanoma located?">
			<free_form_response height="2"/>
		</question>
		<question mandatory="true" prompt="What type of melanoma has been diagnosed?">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Lentigo maligna melanoma"/>
				<selection selected="false" text="Superficial spreading melanoma"/>
				<selection selected="false" text="Nodular melanoma"/>
				<selection selected="false" text="Acral-lentiginous melanoma"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please indicate below.">
						<free_form_response height="2"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has the melanoma metastasized (spread to another location in the body)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If the melanoma has metastasized, to what location?">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you had this problem in the past?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have had this problem in the past, when was it originally diagnosed?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="Do you have a history of any of the following skin problems?  Include date of diagnosis below. (choose all that apply)">
			<table_response add_row_increment="2">
				<column_definitions>
					<column_definition label="Problem" pct="70"/>
					<column_definition label="Date of diagnosis (Month / Year)" pct="15"/>
				</column_definitions>
				<table_data>
					<cell>Abnormal moles</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Eczema</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Dermatitis</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Psoriasis</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Thick scars or keloids</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Skin cancer</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other skin problems</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="false" prompt="If you have had skin cancer please indicate type below:">
			<free_form_response height="1"/>
		</question>
		<question mandatory="false" prompt="If you have had other skin problems please indicate type below:">
			<free_form_response height="2"/>
		</question>
		<question mandatory="true" prompt="What is your occupation?">
			<free_form_response height="1"/>
		</question>
		<question mandatory="true" prompt="Is the majority of your time at work spent?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not applicable"/>
				<selection selected="false" text="Mostly inside"/>
				<selection selected="false" text="Mostly outside"/>
				<selection selected="false" text="Equal time inside and outside"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="How much time per week do you estimate that you spend on outdoor recreational activities? (sports such as golf, tennis or softball, your work, gardening, etc.)">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="less than 1 hour"/>
				<selection selected="false" text="1-2 hours"/>
				<selection selected="false" text="3-4 hours"/>
				<selection selected="false" text="5-6 hours"/>
				<selection selected="false" text="7-8 hours"/>
				<selection selected="false" text="9-10 hours"/>
				<selection selected="false" text="greater than 10 hours"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Which of the following best describes your skin type classification?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Always burn / never tan"/>
				<selection selected="false" text="Usually burn / rarely tan"/>
				<selection selected="false" text="Rarely burn / usually tan"/>
				<selection selected="false" text="Never burn / always tan"/>
				<selection selected="false" text="Naturally dark skin (Indian, African, etc.)"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="When you are out in the sun, do you usually use a sun block product?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you usually use a sun block product, what is the SPF of the product you usually use?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="SPF 4"/>
							<selection selected="false" text="SPF 8"/>
							<selection selected="false" text="SPF 10"/>
							<selection selected="false" text="SPF 15 or higher"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="How would you describe your total lifetime sun (ultraviolet) exposure?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Minimal"/>
				<selection selected="false" text="Moderate"/>
				<selection selected="false" text="Extensive"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever had any severe, blistering sunburns?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever had any severe, blistering sunburns, how often?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="Few"/>
							<selection selected="false" text="Many"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="When did the severe, blistering sunburns mostly occur?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="Childhood"/>
							<selection selected="false" text="Adulthood"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="How would you best describe your total lifetime tanning bed / booth exposure?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="None"/>
				<selection selected="false" text="Minimal"/>
				<selection selected="false" text="Moderate"/>
				<selection selected="false" text="Extensive"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone surgery / biopsies for your current condition (one you are seeking opinion for)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone surgery / biopsies for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Surgery/Biopsy" width="25"/>
								<column_definition label="If biopsy, results" width="20"/>
								<column_definition label="Month/Year" width="20"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone surgery / biopsies, what is your general subjective impression of the experience?  (in your own words)">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone chemotherapy for your current condition (one you are seeking opinion for)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone chemotherapy for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Name of chemotherapy" width="25"/>
								<column_definition label="Dosage" width="10"/>
								<column_definition label="Number of cycles (if known)" width="10"/>
								<column_definition label="Protocol name or number, if known" width="10"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone chemotherapy treatment, what is your general subjective impression of the experience?  (in your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the chemotherapy, how would you rate your overall satisfaction with the treatment?">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone radiation therapy for your current condition (one you are seeking opinion for)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone radiation therapy for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of radiation" width="25"/>
								<column_definition label="Dosage (if known)" width="10"/>
								<column_definition label="Number of treatments" width="10"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone radiation therapy treatment, what is your general subjective impression of the experience?  (in your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the radiation therapy treatment, how would you rate your overall satisfaction with the treatment?">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone any experimental or alternative treatment for your current condition?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone any experimental or alternative treatment for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of treatment" width="25"/>
								<column_definition label="Number of treatments" width="10"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone experimental or alternative treatment, what is your general subjective impression of the experience? (in your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the experimental or alternative treatment, how would you rate your overall satisfaction with the treatment?">
								<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you female of childbearing age?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are female and of childbearing age, are you pregnant?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Are you trying to become pregnant?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Are your menstrual periods regular?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="What is the date of your last menstrual period?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
					<question mandatory="true" prompt="Are you currently on birth control?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If you are currently on birth control, which method?">
									<free_form_response height="2"/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding treatment for your current condition? (surgery, chemotherapy, etc.)">
			<free_form_response height="3"/>
		</question>
		<question mandatory="true" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
				<column_definitions>
					<column_definition label="Physician name" width="30"/>
					<column_definition label="Speciality (Oncology specialist, dermatology specialist, primary care, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What have the physicians stated regarding your prognosis (forecast of the probable course of the disease?)">
			<free_form_response height="2"/>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
		<question mandatory="false" prompt="What are the primary hopes and expectations that you have regarding this consultation?">
			<free_form_response height="2"/>
		</question>
	</question_group>
</questionnaire>
