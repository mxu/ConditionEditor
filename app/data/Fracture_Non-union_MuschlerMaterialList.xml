	<material id="Ultrasound" description="Report only." mandatory="false"/>
	<material id="Joint fluid analysis report" description="Report only." mandatory="false"/>
	<material id="Other" description="Any other medical information you or your physician may feel is important to this consultation." mandatory="false"/>
