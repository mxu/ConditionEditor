<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of your problem (one you are requesting a second opinion for):">
			<free_form_response height="5"/>
		</question>
		<question mandatory="false" prompt="If you have a history of any of the following conditions, please provide date of diagnosis: (choose all that apply)">
			<table_response add_row_increment="2">
				<column_definitions>
					<column_definition label="Condition" width="40"/>
					<column_definition label="Date (Month / Year)" width="15"/>
				</column_definitions>
				<table_data>
					<cell>Clotting disorders</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Alcoholic liver disease</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Alpha 1 antitrypsin deficiency</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Budd-Chiari Syndrome</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Cirrhosis of the liver</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Hepatitis B (infectious)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Hepatitis C (viral)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Liver cancer</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Portal hypertension</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Primary biliary cirrhosis</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Sclerosing cholangitis</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other liver disease (Please list below)</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="How was your current condition (one you are seeking second opinion for) diagnosed? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Blood work"/>
				<selection selected="false" text="Liver biopsy"/>
				<selection selected="false" text="X-ray"/>
				<selection selected="false" text="CT scan"/>
				<selection selected="false" text="MRI scan"/>
				<selection selected="false" text="Ultrasound"/>
				<selection selected="false" text="Liver scan"/>
				<selection selected="false" text="Endoscopy"/>
				<selection selected="false" text="Surgery"/>
				<selection selected="false" text="None of the above"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please list:">
						<free_form_response height="2"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What is your diagnosis?">
			<free_form_response height="2"/>
		</question>
		<question mandatory="true" prompt="When was your diagnosis made?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="When were you last examined by your physician for your current condition (one you are seeking a second opinion for)?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="How long have you had this problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Less than one month"/>
				<selection selected="false" text="1-3 months"/>
				<selection selected="false" text="4-6 months"/>
				<selection selected="false" text="7-12 months"/>
				<selection selected="false" text="Greater than 12 months"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="false" prompt="Have you had any of the following diagnostic studies / procedures?  If so, when?">
			<table_response add_row_increment="2">
				<column_definitions>
					<column_definition label="Study" width="40"/>
					<column_definition label="Date (Month / Year)" width="15"/>
				</column_definitions>
				<table_data>
					<cell>X-ray</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>CT scan</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>MRI scan</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Ultrasound</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Blood work</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Liver biopsy</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Liver scan</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Upper endoscopy</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Paracentesis</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other (Please list below)</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Have you undergone any treatments for your current condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone any treatments for your current condition, please explain in detail the type of treatments you have undergone:">
						<free_form_response height="10"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a history of variceal bleeding (bleeding from enlarged veins in the esophagus)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have a history of variceal bleeding, please provide details of how this was treated:">
						<free_form_response height="10"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever received sclerotherapy or banding treatment?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever received sclerotherapy or banding treatment, when?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you experienced ascites (a build up of fluid in your abdomen)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have experienced ascites, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you experienced jaundice (yellow coloring of skin / eyes)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have experienced jaundice, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you had dark colored urine?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have had dark colored urine, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you noticed that your stools (bowel movements) have a bloody or dark tarry color?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have noticed that your stools have a bloody or dark tarry color, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you experiencing pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are experiencing pain, what is the location of the pain?">
						<free_form_response width="30"/>
					</question>
					<question mandatory="true" prompt="Please rate your pain on the scale below:">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst pain"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate Pain"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal pain"/>
						</item_response>

					</question>
					<question mandatory="true" prompt="Do you experience pain at night while resting?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="Does your pain prevent you from falling asleep or wake you during the night?">
									<item_response drop_down_style="false" single_response="true">
										<selection selected="false" text="Not sure"/>
										<selection selected="false" text="No"/>
										<selection selected="false" text="Yes"/>
									</item_response>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you experience fatigue (tiredness)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you experience fatigue, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you experience weakness?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you experience weakness, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you experience nausea?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you experience nausea, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you experience anorexia (loss of appetite)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you experience anorexia, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you experienced upper gastrointestinal bleeding?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have experienced upper gastrointestinal bleeding, when?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you recently had an unintentional weight loss greater than 10 pounds / 5 kilograms?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you recently had an unintentional weight loss greater than 10 pounds / 5 kilograms, how much (in pounds / kilograms) and over what period of time?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Pounds / kilograms" width="15"/>
								<column_definition label="Period of time" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you experienced edema (swelling) in your feet or legs?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have experienced edema in your feet or legs, when did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you recently had an unintentional weight gain greater than 10 pounds / kilograms?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you recently had an unintentional weight gain greater than 10 pounds / 5 kilograms, how much (in pounds / kilograms) and over what period of time?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Pounds / kilograms" width="15"/>
								<column_definition label="Period of time" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding the treatment of your current condition?  (surgery, medical management, etc.)">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
				<column_definitions>
					<column_definition label="Name of physician" width="30"/>
					<column_definition label="Specialty (gastroenterologist, primary care, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What have the doctors stated regarding your prognosis (forecast of the probable course of the disease)?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
		<question mandatory="false" prompt="What are the primary hopes and expectations that you have regarding this consultation?">
			<free_form_response height="5"/>
		</question>
	</question_group>
</questionnaire>
