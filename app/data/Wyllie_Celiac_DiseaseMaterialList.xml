<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<material_list>
	&MATERIAL_LIST_INTRODUCTORY_INSTRUCTION;
	<material id="Primary physician or specialist physician's last report" description="Report should contain current physical assessment of the patient's condition, description of current signs and symptoms, and treatment options. Report can be written by either primary care physician or physician who diagnosed and is treating the condition." mandatory="true"/>
	<material id="Doctor's notation of medications" description="Doctor's notes clearly indicating current listing of all medications (prescription, over the counter, vitamins)." mandatory="true"/>
	<material id="Doctor's letters" description="Copies of all letters sent to you by the patient's physician(s) of past visit(s), if received." mandatory="true"/>
	<material id="Operative reports" description="Operative reports for all surgeries/biopsies." mandatory="true"/>
	<material id="Case summary" description="Physician's case summary including key findings from previous testing. This can be written by either the primary care physician or the physician who diagnosed and is treating the patient's condition." mandatory="true"/>
	<material id="Discharge summary(s)" description="Discharge summary(s) from any recent (within one year) hospitalization(s)." mandatory="true"/>
	<instruction text="&lt;BR&gt; &lt;b&gt; The following current laboratory studies will be required: &lt;/b&gt;"/>
	<material id="CBC (Complete blood count)" description="Blood Test results." mandatory="true"/>
	<material id="Comprehensive Metabolic Panel (CMP)" description="Blood Test results." mandatory="true"/>
	<material id="WSR" description="Laboratory Test results." mandatory="true"/>
	<material id="Endomysial, transglutaminase and antgliadin studies" description="Laboratory Test results." mandatory="true"/>
	<material id="Protheus celiac antibody panel" description="Laboratory Test results." mandatory="true"/>
	<instruction text="&lt;BR&gt;  &lt;b&gt;The following list of diagnostic medical information is required to proceed with your request for a second opinion.  Reports and (actual) films for all radiology studies done in the last 3 years, if indicated.  These studies to include the following: &lt;/b&gt;"/>
	<material id="Abdominal X-rays" description="Report and films." mandatory="true"/>
	<material id="UGI (Upper Gastrointestinal) series" description="Reports and films." mandatory="true"/>
	<material id="Small bowel series" description="Reports and films." mandatory="true"/>
	<material id="Endoscopy (upper and/or lower)" description="Reports and films (pictures)." mandatory="true"/>
	<material id="Pathology" description="Pathology slides and reports from any biopsies done." mandatory="true"/>
	<instruction text="&lt;BR&gt; &lt;b&gt; The following list of medical information although not mandatory, are optional if done: &lt;/b&gt;"/>
	<material id="Other" description="Any other medical information you or your physician may feel is pertinent to this consultation." mandatory="false"/>
	&MATERIAL_LIST_CLOSING_INSTRUCTION;
</material_list>
