<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<material_list>
	&MATERIAL_LIST_INTRODUCTORY_INSTRUCTION;
	&PHYSICIAN_LAST_REPORT;
	<material id="Doctor's letters" description="Copies of all letters sent to you by your physician(s) of last visit(s), if received." mandatory="true"/>
	<material id="Doctor's notation of medications" description="Note should clearly indicate current listing of all medications (prescription, over the counter, vitamins)." mandatory="true"/>
	<material id="Operative reports" description="Reports are required for all prior relevant surgeries / biopsies." mandatory="true"/>
	<material id="Physician's treatment reports" description="Reports of any and all treatments you have undergone for this condition."/>
	<material id="Discharge summaries" description="Discharge summaries of any recent (within one year) hospitalizations." mandatory="true"/>
	<instruction text="&lt;BR&gt;  The following list of diagnostic medical information will be required in order to proceed with your request for a second opinion.  Radiologic and diagnostic studies done in the last 3 years will be required.  The actual original (not copies) films of the studies and reports will be needed, if indicated."/>
	<material id="CT scan" description="Report and films." mandatory="true"/>
	<material id="MRI scan" description="Report and films." mandatory="true"/>
	<material id="Ultrasound" description="Report and films." mandatory="true"/>
	<material id="Liver scan" description="Report only (if done)." mandatory="true"/>
	<material id="Other X-rays" description="Reports and films, if done." mandatory="true"/>
	<instruction text="&lt;BR&gt;  Current blood work to include the following blood tests:"/>
	<material id="Complete blood count (CBC)" description="Laboratory report (blood test)" mandatory="true"/>
	<instruction text="&lt;BR&gt;  Hepatitis remote panel (B &amp; C) to include:"/>
	<material id="Hepatitis B surface antigen" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Hepatitis B core antibody total" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Hepatitis B surface antibody" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Hepatitis C antibody" description="Laboratory report (blood test)" mandatory="true"/>
	<instruction text="&lt;BR&gt;  Liver function tests (LFT's) to include:"/>
	<material id="Ammonia" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Alkaline phosphatase" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Alanine transaminase (ALT)" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Aspartate transaminase (AST)" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Bilirubin" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Gamma glutamyl transpeptidase" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Lactate dehydrogenase" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="5'-nucleotidase" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Albumin" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Alpha-fetoprotein" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Mitochondrial antibodies" description="Laboratory report (blood test)" mandatory="true"/>
	<material id="Prothrombin Time (PT)" description="Laboratory report (blood test)" mandatory="true"/>
	<instruction text="&lt;BR&gt; The following list of medical information, although not mandatory, are optional if done:"/>
	<material id="Other current blood work" description="Within the last 6 months. (if done)" mandatory="false"/>
	<material id="Other" description="Any other medical information you or your physician may feel is pertinent to this consultation." mandatory="false"/>
		&MATERIAL_LIST_CLOSING_INSTRUCTION;
</material_list>
