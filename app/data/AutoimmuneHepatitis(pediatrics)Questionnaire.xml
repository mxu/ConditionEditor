<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding child's current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of child's problem (one you are requesting a second opinion for)?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="What are the primary hopes and expectations that you have regarding this consultation?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="As related to  child's condition (one you are requesting second opinion for) how was patient's diagnosis made?  (choose all that apply)">
			<item_response single_response="false">
				<selection selected="false" text="X-Ray"/>
				<selection selected="false" text="Cholangiogram"/>
				<selection selected="false" text="Angiogram"/>
				<selection selected="false" text="Upper endoscopy"/>
				<selection selected="false" text="CT Scan"/>
				<selection selected="false" text="MRI Scan"/>
				<selection selected="false" text="MRE Scan"/>
				<selection selected="false" text="Blood tests"/>
				<selection selected="false" text="Liver biopsy"/>
				<selection selected="false" text="Liver Scan"/>
				<selection selected="false" text="Liver function tests"/>
				<selection selected="false" text="None of Above"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt=" If other, Please list">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Was the onset of child's (patient's) condition sudden?">
			<item_response single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>	
		<question mandatory="true" prompt="When was child's diagnosis made?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="When was child (patient) last examined / evaluated by a physician for his/her condition?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="For how long has child (patient) had this problem?">
			<item_response single_response="true">
				<selection selected="false" text="Less than month"/>
				<selection selected="false" text="1-3 months"/>
				<selection selected="false" text="4-6 months"/>
				<selection selected="false" text="7-12 months"/>
				<selection selected="false" text="Greater than 12 months"/>
			</item_response>
		</question>	
		<question mandatory="true" prompt="Are child's  symptoms?">
			<item_response single_response="true">
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="None of Above"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please explain (be specific as possible) below:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you feel that child's general health has deteriorated as a result of this condition?">
			<item_response single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
