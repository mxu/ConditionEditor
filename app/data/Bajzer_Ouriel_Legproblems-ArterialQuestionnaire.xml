<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<!-- edited with XML Spy v3.5 NT (http://www.xmlspy.com) by Tony Hardee (Perot Systems) -->
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of your problem (one you are requesting a second opinion for):">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="When was your diagnosis made?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="What is the diagnosis?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Do you have a family history of any of the following conditions? (fill in all that apply)">
			<table_response add_row_increment="2" row_height="3">
				<column_definitions>
					<column_definition label="Condition" width="30"/>
					<column_definition label="Relationship" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Aneurysm</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Coronary artery disease</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Cancer</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>CVA (stroke)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Diabetes</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Hypertension</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>COPD / emphysema</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Kidney disease</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Premature (at a young age) atherosclerotic coronary heart disease</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other vascular / circulatory problems not listed above</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other arterial / circulatory problem, please list below:</cell>
					<cell/>
					<cell/>
				</table_data>				
			</table_response>
		</question>
		<question mandatory="true" prompt="When were you last examined by your physician for your current condition (one you are requesting a second opinion for)?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="Have you been seen by a specialist for your condition?">
			<item_response single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has an immediate family member (parents, siblings) been diagnosed with heart disease or circulatory problems?">
			<item_response single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If an immediate family member has been diagnosed with heart disease or circulatory problems, please provide the following information:">
						<table_response add_row_increment="2" row_height="3">
							<column_definitions>
								<column_definition label="Relationship" width="20"/>
								<column_definition label="Diagnosis " width="35"/>
								<column_definition label="Age at diagnosis" width="15"/>
								<column_definition label="Current condition of &lt;BR&gt; relative, if known" width="35"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a history of any of the following ? (fill in all that apply)">
			<table_response add_row_increment="2" row_height="3">
				<column_definitions>
					<column_definition label="Condition" width="20"/>
					<column_definition label="Date (month, year) &lt;BR&gt; of diagnosis " width="20"/>
					<column_definition label="Has the disease been &lt;BR&gt; active in the past 5 years? &lt;BR&gt; (yes, no or unsure)" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Aneurysm</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Angina (chest pain)</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Arrythmias (heart irregularities)</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Bronchitis</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Cerebral Vascular Accident (Stroke)</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Emphysema / COPD</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Marfan's Syndrome</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Pneumonia</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Shortness of breath</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Sleep apnea</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>TIA (transient ischemia attack) (mini-stroke)</cell>
					<cell/>
					<cell/>
				</table_data>
				
				<table_data>
					<cell> Other problems not listed above, please list below:</cell>
					<cell/>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="If you have ever had any of the following procedures or surgeries, please provide date: (fill in all that apply)">
			<table_response initial_rows_to_display="2" add_row_increment="0" row_height="2">
				<column_definitions>
					<column_definition label="Procedure / Surgery" width="30"/>
					<column_definition label="Date (Month / Year)" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Amputation</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Lower extremity (leg) artery surgery</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Carotid (neck) artery surgery</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Aneurysm repair</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Thoracic aneurysm repair</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Percutaneous intervention (balloon angioplasty)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Pacemaker insertion</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Renal (kidney) artery intervention</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Aortic surgical procedures</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other vascular / arterial surgeries, please list below</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="If you have you had any of the following studies/diagnostic tests, please provide date below: (fill in all that apply)">
			<table_response initial_rows_to_display="2" add_row_increment="0" row_height="2">
				<column_definitions>
					<column_definition label="Study / Diagnosis" width="30"/>
					<column_definition label="Date (Month / Year)" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Angiogram</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Cardiac (heart) catheterization</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Carotid (neck) Ultrasound</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Doppler studies</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Stress test</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>PVR (peripheral vascular resistance)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>EKG</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>CT Scan</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>MRI Scan</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Percutaneous intervention (balloon angioplasty)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Ultrasound</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other, please list below:</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Are you experiencing leg pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are experiencing leg pain, where is the leg pain the worst?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Buttock"/>
							<selection selected="false" text="Thigh"/>
							<selection selected="false" text="Calf"/>
							<selection selected="false" text="Foot"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have any of the following problems with your legs? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Leg pain at rest"/>
				<selection selected="false" text="Leg pain at night"/>
				<selection selected="false" text="Leg pain while walking"/>
				<selection selected="false" text="Ulcers (sores) on legs or feet"/>
				<selection selected="false" text="Gangrene on legs or feet"/>
				<selection selected="false" text="None of the above"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt=" If other, please list below:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you ever experience any of the following symptoms: (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Chest pain"/>
				<selection selected="false" text="Shortness of breath"/>
				<selection selected="false" text="Night sweats"/>
				<selection selected="false" text="Fatigue"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt=" If other, please list below:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever had a myocardial infarction (heart attack)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure">
					<question mandatory="true" prompt="If unsure, please describe the circumstances below:">
						<free_form_response height="5"/>
					</question>
				</selection>	
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever had a myocardial infarction (heart attack), when?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
					
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been diagnosed with Diabetes (high blood sugar levels)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been diagnosed with Diabetes, when?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
					<question mandatory="true" prompt="Are you currently taking daily insulin injections to control your Diabetes?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If you are currently taking daily insulin injections, when did you first start taking insulin injections?">
									&MONTH_YEAR_TABLE_RESPONSE;
								</question>
							</selection>
						</item_response>
					</question>
					<question mandatory="true" prompt="Do you test your glucose (sugar) level at home on a regular basis?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If you test your glucose level at home on a regular basis, what is the usual morning range of readings?">
									<item_response drop_down_style="false" single_response="true">
										<selection selected="false" text="70-100"/>
										<selection selected="false" text="101-150"/>
										<selection selected="false" text="151-200"/>
										<selection selected="false" text="201-250"/>
										<selection selected="false" text=">250"/>
									</item_response>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been diagnosed with hypertension (high blood pressure)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been diagnosed with hypertension, when?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
					<question mandatory="true" prompt="Do you take home blood pressure readings?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Is your blood pressure under control with your current treatment?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="If you do have hypertension (high blood pressure), has your blood pressure control worsened recently?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Please provide your most recent blood pressure reading:">
						<table_response initial_rows_to_display="2" add_row_increment="0" row_height="2">
							<column_definitions>
								<column_definition label="Systolic (top number)" width="20"/>
								<column_definition label="Diastolic (bottom number)" width="15"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="When was this reading taken?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
					<question mandatory="true" prompt="Who took this most recent reading?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Self"/>
							<selection selected="false" text="Family member"/>
							<selection selected="false" text="Physician"/>
							<selection selected="false" text="Nurse"/>
							<selection selected="false" text="Other"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding the treatment of your current condition?">
			<free_form_response height="10"/>
		</question>
		<question prompt="Which physician made this recommendation?">
			<table_response row_height="1" add_row_increment="0" initial_rows_to_display="1">
				<column_definitions>
					<column_definition label="Physician" width="30"/>
					<column_definition label="Specialty (cardiologist, vascular specialist,  primary care physician, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
