<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<!-- Abdominal qauestionnaire -->
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="What is the approximate age or year when you first had abdominal pain?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
				<column_definitions>
					<column_definition label="Age or Year" width="20"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What is the original cause of the pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Accident"/>
				<selection selected="false" text="Injury"/>
				<selection selected="false" text="Illness"/>
				<selection selected="false" text="Surgery"/>
				<selection selected="false" text="Unsure">
					 <question mandatory="true" prompt=" If unsure, Please describe: ">
						<free_form_response height="4"/>
					 </question>					
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you currently have an active Workman's Compensation claim or active litigation (law suit) in progress related to the cause of your pain ?">
		  <item_response drop_down_style="false" single_response="true">
			  <selection selected="false" text="No"/>
			  <selection selected="false" text="Yes">
			 	 <question mandatory="true" prompt=" If yes, please explain">
			 	 	<free_form_response height="2"/>
			 	 </question>			 	 			  
			  </selection>
		  </item_response>
		</question>
		<question mandatory="true" prompt="What best describes the location of the pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Right Upper abdomen"/>
				<selection selected="false" text="Right Lower abdomen"/>
				<selection selected="false" text="Left Upper abdomen"/>
				<selection selected="false" text="Left Lower abdomen"/>
				<selection selected="false" text="Pelvis"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="What is associated with the pain? (select all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Nausea"/>
				<selection selected="false" text="Vomiting"/>
				<selection selected="false" text="Diarrhea"/>
				<selection selected="false" text="Constipation"/>
				<selection selected="false" text="Stool containing blood or mucuous"/>
				<selection selected="false" text="None of above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="What makes the pain worse? (select all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Eating"/>
				<selection selected="false" text="Drinking"/>
				<selection selected="false" text="Vomiting"/>
				<selection selected="false" text="Moving your bowels"/>
				<selection selected="false" text="Not moving your bowels"/>
				<selection selected="false" text="Urination"/>
				<selection selected="false" text="None of above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are they particular positions, or activities, that makes the pain worse? Please describe">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Has the pain changed over time?">
		  <item_response drop_down_style="false" single_response="true">
		    	  <selection selected="false" text="Unsure"/>
			  <selection selected="false" text="No"/>
			  <selection selected="false" text="Yes">
			 	 <question mandatory="true" prompt=" If yes, please describe how it has changed and over what period of time?  ">
			 	 	<free_form_response height="10"/>
			 	 </question>			 	 			  
			  </selection>
		  </item_response>
		</question>
		
		
		<question mandatory="true" prompt="Is there any food or drink you are unable to tolerate? Please explain">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Select all the tests that you had done related to your abdominal pain?">
		<table_response add_row_increment="1" initial_rows_to_display="1">
				<column_definitions>
					<column_definition label="" width="25"/>
					<column_definition label="Year" width="15"/>
					<column_definition label="Results (If known)" width="35"/>
				</column_definitions>
