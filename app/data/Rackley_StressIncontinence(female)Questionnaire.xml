<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding patient's current condition?">
			<free_form_response height="5"/>
		</question>
		
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		
		<question mandatory="true" prompt="Does patient have a family history of cancer?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If patient have a family history of cancer, please specify family member (maternal or paternal side), type of cancer, age at diagnosis, etc. below:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Family member &lt;BR&gt; (mother, father,sibling)?" width="25"/>
								<column_definition label="Type of cancer" width="25"/>
								<column_definition label="Age at diagnosis &lt;BR&gt; (if known)" width="30"/>
								<column_definition label="Current condition &lt;BR&gt; of relative" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Does patient have a prior history of any urological and / or gynecological disorders?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If patient have a prior history of any urological and / or gynecological disorders, please provide additional information below:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of condition" width="30"/>
								<column_definition label="Date (Month/Year) &lt;BR&gt; of diagnosis " width="20"/>
								<column_definition label="Type of treatment " width="30"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="As related to patient's current condition (one you are requesting second opinion for) how was patient's diagnosis made? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="X-rays"/>
				<selection selected="false" text="Cotton tip applicator test"/>
				<selection selected="false" text="IVP"/>
				<selection selected="false" text="Ultrasound"/>
				<selection selected="false" text="Urethroscopy"/>
				<selection selected="false" text="Cystoscopy"/>
				<selection selected="false" text="Urodynamics"/>
				<selection selected="false" text="VCUG"/>
				<selection selected="false" text="CT scan"/>
				<selection selected="false" text="MRI scan"/>
				<selection selected="false" text="Urinalysis"/>
				<selection selected="false" text="Urine culture "/>
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="None of the above"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please explain below:">
						<free_form_response/>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Has patient been examined / evaluated by a physician for her current condition (one you are seeking second opinion for)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, What is patient's diagnosis? (please explain in detail below):">
						<free_form_response height="5"/>
					</question>
		
					<question mandatory="true" prompt="When was patient's diagnosis made?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
		
					<question mandatory="true" prompt="When was patient last examined by the physician for her condition (one you are seeking a second opinion for)?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
					
				</selection>
			</item_response>
		</question>
				
		<question mandatory="true" prompt="For how long has the patient had this problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Less than a month"/>
				<selection selected="false" text="1-3 months"/>
				<selection selected="false" text="4-6 months"/>
				<selection selected="false" text="7-12 months"/>
				<selection selected="false" text="Greater than 12 months"/>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Are patient's symptoms ?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Do you feel as if patient's general health has deteriorated as a result of this condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please explain below:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Has the condition for which you are seeking a second opinion been previously treated?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not Sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If  yes, please provide additional information below:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of treatment" width="30"/>
								<column_definition label="Date (Month/Year)" width="20"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="30"/>
							</column_definitions>
						</table_response>
					</question>
					
					<question mandatory="true" prompt="If patient has been treated for her current condition, what is general subjective impression of the experience? (in your own words)">
						<free_form_response height="10"/>
					</question>
					
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Is patient experiencing any difficulty in urination such as frequency, urgency, burning or pain on urination, blood in urine, etc.?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not Sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
				
					<question mandatory="true" prompt="If yes, please explain in detail below (give examples of the problem(s) if possible):">
						<free_form_response height="10"/>
					</question>
					
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Has patient been told that she has an infection (bladder, urinary tract)  associated with her condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, has patient been prescribed medication(s) for the infection?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If yes, please provide additional information below:">
									<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
										<column_definitions>
											<column_definition label="Name of medication" width="25"/>
											<column_definition label="Dosage (if known)" width="25"/>
											<column_definition label="Date started" width="20"/>
											<column_definition label="How taken? &lt;BR&gt; (pills, IV, etc)" width="25"/>
										</column_definitions>
									</table_response>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Has patient's physician prescribed any other medication(s) for her current condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
				
					<question mandatory="true" prompt="If yes, please provide additional information below:">
							<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
								<column_definitions>
									<column_definition label="Name of medication" width="25"/>
									<column_definition label="Dosage (if known)" width="25"/>
									<column_definition label="Date started" width="20"/>
									<column_definition label="How taken? &lt;BR&gt; (pills, IV, etc)" width="25"/>
								</column_definitions>
							</table_response>
						</question>
						
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Is Patient experiencing pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not Sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
				
					<question mandatory="true" prompt="If yes, location of pain?">
						<free_form_response/>
					</question>
					
					<question mandatory="true" prompt="Please rate patient's pain on the scale below: (1= Minimal pain, 10= Worst pain)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst pain"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate Pain"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal pain"/>
						</item_response>
					</question>
					
					<question mandatory="true" prompt="Does patient's pain awaken her from sleep?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If yes, how often?">
									<item_response drop_down_style="false" single_response="true">
										<selection selected="false" text="Not Sure"/>
										<selection selected="false" text="Frequently"/>
										<selection selected="false" text="Occasionally"/>
										<selection selected="false" text="Rarely"/>
									</item_response>
								</question>
							</selection>
						</item_response>
					</question>
					
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Has patient experienced constipation?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					
					<question mandatory="true" prompt="How would you describe patient's constipation as ?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="Mild"/>
							<selection selected="false" text="Moderate"/>
							<selection selected="false" text="Severe"/>
						</item_response>
					</question>
					
					<question mandatory="true" prompt="Please rate patient's constipation (1=minimal, 10=worst constipation)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst constipation"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate constipation"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal constipation"/>
						</item_response>
					</question>
					
					<question mandatory="true" prompt="When did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				
				</selection>
			</item_response>
		</question>
		
			<question mandatory="true" prompt="Has patient suffered diarrhea?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					
					<question mandatory="true" prompt="How would you describe patient's diarrhea as ?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="Mild (bowel movements 3-6 times per day)"/>
							<selection selected="false" text="Moderate (bowel movements 7-8 times per day)"/>
							<selection selected="false" text="Severe (bowel movements more than 8 times per day)"/>
						</item_response>
					</question>
					
					<question mandatory="true" prompt="Please rate patient's diarrhea (1=minimal, 10=worst diarrhea)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst diarrhea"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate diarrhea"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal diarrhea"/>
						</item_response>
					</question>
					
					<question mandatory="true" prompt="When did this symptom begin?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Has patient experienced any other symptoms or problems not listed above?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not Sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
				
					<question mandatory="true" prompt="If yes, please describe in depth">
						<free_form_response height="10"/>
					</question>
					
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Has patient's usual activities of daily living changed due to this condition (one you are seeking an opinion for)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Remained the same"/>
				<selection selected="false" text="Increased"/>
				<selection selected="false" text="Decreased">
					<question mandatory="true" prompt="If decreased, what is preventing patient from participating in her daily activities? (please describe in detail)">
						<free_form_response height="10"/>
					</question>
				</selection>
			</item_response>
		</question>
				
		<question mandatory="true" prompt="Please rate patient's activity level below with regard to  general performance status. (choose one)">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="0 (Fully active, able to carry on all usual activities without restriction)"/>
				<selection selected="false" text="1 (Restricted in physically strenuous activity but able to carry out work of light or sedentary nature, example:  light housework, office work.)"/>
				<selection selected="false" text="2 (Ambulatory and capable of all self care but unable to carry out any work activities,  Up and about more than 50% of waking hours.)"/>
				<selection selected="false" text="3 (Capable of only limited self care, confined to bed or chair more than 50% of waking hours)"/>
				<selection selected="false" text="4 (Completely disabled.  Cannot carry on any self care.  Totally confined to bed or chair.)"/>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="What has been recommended regarding treatment for patient's current condition? (medical management, surgery, etc.)">
			<free_form_response height="6"/>
		</question>
		
		<question mandatory="false" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0" row_height="1">
				<column_definitions>
					<column_definition label="Physician" width="25"/>
					<column_definition label="Specialty (primary care &lt;BR&gt; physician, urologist, gynecologist, &lt;BR&gt; primary care physician, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding patient's condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
