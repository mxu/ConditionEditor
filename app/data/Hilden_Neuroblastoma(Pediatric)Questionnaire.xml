<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your child's current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of your child's problem (the one you are requesting a second opinion for):">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Has your child's current problem been diagnosed as a malignant tumor?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="How was your child's diagnosis made? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Biopsy"/>
				<selection selected="false" text="Surgery"/>
				<selection selected="false" text="X-ray"/>
				<selection selected="false" text="CT scan"/>
				<selection selected="false" text="MRI scan"/>
				<selection selected="false" text="Blood work"/>
				<selection selected="false" text="Bone scan"/>
				<selection selected="false" text="Unknown"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please explain:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="When was your child's diagnosis made?">
		<free_form_response height="1"/>
		</question>
		
		<question mandatory="true" prompt="What is the location of your child's tumor?">
			<free_form_response height="1"/>
		</question>
		<question mandatory="true" prompt="Is there a mass?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If there is a mass, how large is the mass? ">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Less than 5 cm. (2 inches)"/>
							<selection selected="false" text="5-10 cm. (2-4 inches)"/>
							<selection selected="false" text="Greater than 10 cm. (4 inches)"/>
							<selection selected="false" text="Not sure"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="If there is a mass, is the mass? ">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="Hard"/>
							<selection selected="false" text="Soft"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="If there is a mass, is the mass getting? ">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Larger"/>
							<selection selected="false" text="Smaller"/>
							<selection selected="false" text="Staying the same"/>
							<selection selected="false" text="Fluctuating in size"/>
							<selection selected="false" text="Not sure"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="When was your child last examined by his / her physician?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="How long has your child had this problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Less than a month"/>
				<selection selected="false" text="1 - 3 months"/>
				<selection selected="false" text="4 - 6 months"/>
				<selection selected="false" text="7 - 12 months"/>
				<selection selected="false" text="Greater than 12 months"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is your child experiencing pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child is experiencing pain, what is the location of the pain?">
						<free_form_response height="1"/>
					</question>
					<question mandatory="true" prompt="If your child is experiencing pain and you are able to assess his / her discomfort level, please rate the pain on the scale below: (1= minimal pain, 10 = worst pain)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst pain"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate Pain"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal pain"/>
						</item_response>

					</question>
					<question mandatory="true" prompt="Does your child experience pain at night while resting?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If your child is experiencing pain at night while resting, does it prevent your child from falling asleep or does it wake him / her during the night?">
									<item_response drop_down_style="false" single_response="true">
										<selection selected="false" text="Not sure"/>
										<selection selected="false" text="No"/>
										<selection selected="false" text="Yes"/>
									</item_response>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please list below all imaging studies your child has had.  Please include ALL studies from list below, including pre and post treatments, and dates done:">
			<table_response add_row_increment="2">
				<column_definitions>
					<column_definition label="Study" width="35"/>
					<column_definition label="Month" width="15"/>
					<column_definition label="Year" width="15"/>
				</column_definitions>
				<table_data>
					<cell>X-rays</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>CT scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>MRI scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Ultrasound</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Bone scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other (Please list below)</cell>
					<cell/>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Does your child have a prior history of tumor(s)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child has a prior history of tumor(s), indicate date of diagnosis:">
					&MONTH_YEAR_TABLE_RESPONSE;
					</question>
					<question mandatory="true" prompt="If your child has a prior history of tumor(s), do you know the type of tumor(s)?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If you know the type of tumor(s), indicate the type of tumor:">
									<free_form_response height="1"/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please list all the treatments your child has undergone thus far for his / her condition? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Surgery"/>
				<selection selected="false" text="Chemotherapy"/>
				<selection selected="false" text="Radiation therapy"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please explain:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has your child had any surgery for his / her condition? (please include placement of a shunt or ventriculostomy)">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child has had any surgery for his / her condition?, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Surgery/Procedure" width="25"/>
								<column_definition label="Month/Year" width="20"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If your child has undergone surgical treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="If your child has undergone surgery, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has your child undergone chemotherapy treatment for his / her condition?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child has undergone chemotherapy treatment for his / her condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Name of chemotherapy" width="20"/>
								<column_definition label="Number of cycles &lt;BR&gt; (if known)" width="15"/>
								<column_definition label="Protocol name &lt;BR&gt; and/or number, &lt;BR&gt; if known" width="20"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Physician" width="10"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If your child has undergone chemotherapy, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="If your child has undergone chemotherapy, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has your child undergone any radiation therapy treatments?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child has undergone any radiation therapy treatments, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of radiation" width="25"/>
								<column_definition label="Dosage (if known)" width="15"/>
								<column_definition label="Number of&lt;BR&gt; treatments" width="12"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Physician" width="10"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If your child has undergone radiation therapy treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="If your child has undergone radiation therapy treatment, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has your child undergone experimental or alternative treatment for his / her current condition?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your child has undergone experimental or alternative treatment for his / her current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of treatment" width="25"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Physician" width="10"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If your child has undergone experimental or alternative treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="If your child has undergone experimental or alternative treatment, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
					<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding future therapy for your child?  (Surgery, medical management, etc.)">
			<free_form_response height="3"/>
		</question>
		<question mandatory="false" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
				<column_definitions>
					<column_definition label="Physician name" width="30"/>
					<column_definition label="Type of doctor (surgeon, oncologist, primary care, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What have the doctors stated regarding your child's prognosis (forecast of the probable course of the disease)?">
			<free_form_response height="3"/>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your child's condition?">
			<free_form_response height="10"/>
		</question>
		<question mandatory="true" prompt="What are the primary hopes and expectations that you have regarding this consultation?">
			<free_form_response height="3"/>
		</question>
	</question_group>
</questionnaire>
