<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<material_list>
	&MATERIAL_LIST_INTRODUCTORY_INSTRUCTION;
	&PHYSICIAN_LAST_REPORT;
	<material id="Doctor's letters" description="Copies of all letters sent to you by your physician(s) of past visit(s), if received." mandatory="true"/>
	<material id="Physician reports" description="Of any and all other treatments received for this diagnosis, for example: chemotherapy, radiation therapy, etc." mandatory="true"/>
	<material id="Doctor's notation of medications" description="Doctor's notes clearly indicating current listing of all medications (prescription, over the counter, vitamins)." mandatory="true"/>
	<material id="Operative reports" description="Operative reports for any relevant surgeries / biopsies." mandatory="true"/>
	<material id="Discharge summaries" description="Discharge summaries of any recent (within one year) hospitalizations. " mandatory="true"/>
	<instruction text="&lt;BR&gt;  &lt;b&gt;Radiologic and diagnostic studies done in the last 3 years. Studies to include:  The actual original films (not copies) of the studies and the reports will be needed. &lt;/b&gt;"/>
	<material id="Pathology" description="All laboratory pathology reports &lt;u&gt;(including immunophenotype and cytogenetics)&lt;/u&gt; and glass slides and blocks for any and all relevant biopsies done." mandatory="true"/>
	<material id="CT scan" description="Report and films." mandatory="true"/>
	<material id="MRI scan" description="Report and films." mandatory="true"/>
	<material id="Chest X-ray" description="Report and films." mandatory="true"/>
	<material id="Other X-rays (if applicable)" description="Report and films." mandatory="true"/>
	<instruction text="&lt;BR&gt;  &lt;b&gt;Current laboratory blood test reports from time of diagnosis and within the past 12 months to include the following tests: &lt;/b&gt;"/>
	<material id="CBC (Complete Blood Count) with Differential (includes red blood cells, white blood cells, hemoglobin, hematocrit, and indices" description=" Laboratory report" mandatory="true"/>
	<material id="Blood Urea Nitrogen (BUN)" description="Laboratory report" mandatory="true"/>
	<material id="Creatinine" description="Laboratory report" mandatory="true"/>
	<material id="Alkaline Phosphatase" description="Laboratory report" mandatory="true"/>
	<material id="Asparate Aminotransferase (AST)" description="Laboratory report" mandatory="true"/>
	<material id="Alanine Aminotransferase (ALT)" description="Laboratory report" mandatory="true"/>
	<material id="Lactate Dehydrogenase (LDH)" description="Laboratory report" mandatory="true"/>
	<material id="Platelet count" description="Laboratory report" mandatory="true"/>
	<material id="Serum beta - 2 microglobulin" description="Laboratory report" mandatory="true"/>
	<instruction text="&lt;BR&gt; &lt;b&gt; The following list of medical information although not mandatory, are optional if done: &lt;/b&gt;"/>
	<material id="Other current blood work" description="Within last 6 months." mandatory="false"/>
	<material id="Other information" description="Any other medical information you or your physician may feel is pertinent to this consultation." mandatory="false"/>
	&MATERIAL_LIST_CLOSING_INSTRUCTION;
</material_list>
