<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="How was your diagnosis made?  (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="X-rays"/>
				<selection selected="false" text="CT"/>
				<selection selected="false" text="MRI"/>
				<selection selected="false" text="Ultrasound"/>
				<selection selected="false" text="Bronchoscopy"/>
				<selection selected="false" text="Unknown"/>
				<selection selected="false" text="Other">
					<question prompt="If other, please specify">
						<free_form_response/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="When were you first diagnosed?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="Have you had any of the following studies?  If so, when?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have had any of the following studies, please indicate below:">
						<table_response add_row_increment="2">
							<column_definitions>
								<column_definition label="Study" pct="70"/>
								<column_definition label="Month" pct="15"/>
								<column_definition label="Year" pct="15"/>
							</column_definitions>
							<table_data>
								<cell>CT</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>MRI</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Fiberoptic bronchoscopy</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Other (Please list below)</cell>
								<cell/>
								<cell/>
							</table_data>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone a PSQI (Pittsburgh Sleep Quality Index) test or other sleep test?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone a PSQI test or other sleep test, what type of sleep test have you undergone?">
						<free_form_response height="3"/>
					</question>
					<question mandatory="true" prompt="If you have undergone a PSQI test , what was your score (if known)?">
						<free_form_response/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you had any surgical procedures for your condition (tonsillectomy, palatouvuloplasty, etc.)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have had any surgical procedures for your condition, please provide the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Surgery/procedure" width="25"/>
								<column_definition label="Month/Year" width="20"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="On an average night, how many hours do you sleep?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="More than 10 hours"/>
				<selection selected="false" text="8-10 hours"/>
				<selection selected="false" text="5-7 hours"/>
				<selection selected="false" text="2-4 hours"/>
				<selection selected="false" text="Less than 2 hours"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you wake up during the night?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you wake up during the night, how often?  (times/night)">
						<free_form_response/>
					</question>
					<question mandatory="true" prompt="How long does it take you to fall back to sleep?  (minutes/hours)">
						<free_form_response/>
					</question>
					<question mandatory="true" prompt="If you wake up during the night, do you ever feel short of breath upon awakening?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Which of the following best describes how you usually feel when you first wake up in the morning? (choose one)">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Alert and energetic"/>
				<selection selected="false" text="Rested and refreshed"/>
				<selection selected="false" text="Rested but groggy"/>
				<selection selected="false" text="Tired and slow"/>
				<selection selected="false" text="Barely able to get up"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you take naps during the day?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you take naps during the day, how often?  (times/day)">
						<free_form_response/>
					</question>
					<question mandatory="true" prompt="After napping, do you feel rested?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you ever experience EDS (excessive daytime sleepiness), i.e.: a feeling of extreme fatigue, unable to stay awake?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you ever experience EDS, how often?  (times/day)">
						<free_form_response/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever suddenly fallen asleep while performing a routine task (driving, eating, bathing, etc.)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you experience any of the following? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Poor concentration"/>
				<selection selected="false" text="Memory problems"/>
				<selection selected="false" text="Irritability/moodiness"/>
				<selection selected="false" text="Short-temperedness"/>
				<selection selected="false" text="Decreased sex-drive"/>
				<selection selected="false" text="Loud snoring"/>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you been diagnosed with clinical depression?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have been diagnosed with clinical depression, are you currently receiving any treatment for the depression?  (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Antidepressant medications (Effexor, Elavil, Paxil, etc.)"/>
							<selection selected="false" text="Psychotherapy"/>
							<selection selected="false" text="Counseling"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please specify:">
									<free_form_response/>
								</question>
							</selection>
							<selection selected="false" text="None of the above"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been diagnosed with any of the following?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question prompt="If you have ever been diagnosed with any of the following, please choose all that apply from the following list:">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Obesity">
								<question mandatory="true" prompt="If you have been diagnosed with obesity, how many pounds / kilograms are you over ideal weight?  (# of lbs / kgs.)">
									<free_form_response/>
								</question>
							</selection>
							<selection selected="false" text="Nasal polyps"/>
							<selection selected="false" text="Rhinitis (inflammation of nasal lining)"/>
							<selection selected="false" text="Deviated nasal septum"/>
							<selection selected="false" text="Other nasal obstruction"/>
							<selection selected="false" text="Hypothyroidism (underactive thyroid gland)"/>
							<selection selected="false" text="Macroglossia (large tongue)"/>
							<selection selected="false" text="Micrognathia (abnormal smallness of jaw)"/>
							<selection selected="false" text="Acromegaly (enlargement of bones/nose)"/>
							<selection selected="false" text="Pulmonary hypertension (high pressure in the circulation system of the lungs)"/>
							<selection selected="false" text="Craniofacial (head and face) deformities"/>
							<selection selected="false" text="Narcolepsy"/>
							<selection selected="false" text="Witnessed apneas (stop breathing) at night"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Did you answer yes to Hypertension (High blood pressure) on the General Medical Form?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you answered yes to Hypertension (High blood pressure) on the General Medical Form, when was your hypertension diagnosed?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
					<question mandatory="true" prompt="If you answered yes to Hypertension (High blood pressure) on the General Medical Form, when did you start treatment?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
					<question mandatory="true" prompt="Please list all medications prescribed for your hypertension:">
						<table_response initial_rows_to_display="3" add_row_increment="3">
							<column_definitions>
								<column_definition label="Medication" width="15"/>
								<column_definition label="Dose" width="10"/>
								<column_definition label="Frequency" width="15"/>
								<column_definition label="When started" width="18"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="Is your hypertension well controlled?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="What is your usual range of blood pressure readings? Indicate systolic (top number)/diastolic (bottom number) - enter unsure if you don't know:">
						<free_form_response/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you currently using any of the following?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question prompt="If you are currently using any of the following, please choose all that apply from the following list:">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Nasal CPAP mask"/>
							<selection selected="false" text="Nasal BiPAP mask"/>
							<selection selected="false" text="Device to maintain sleep position (fanny pack, tennis balls on nightshirt back, etc)"/>
							<selection selected="false" text="Other device">
								<question prompt="If other, please specify">
									<free_form_response/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding your current condition?  (surgery, medical management, etc.)">
			<free_form_response height="1"/>
		</question>
		<question mandatory="false" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
				<column_definitions>
					<column_definition label="Physician Name" width="30"/>
					<column_definition label="Specialty &lt;BR&gt; (Surgeon, primary care physician, etc.)" width="30"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
