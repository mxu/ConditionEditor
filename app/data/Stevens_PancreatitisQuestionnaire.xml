<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		
		<question mandatory="true" prompt="What is the diagnosis?">
			<free_form_response height="5"/>
		</question>
		
		<question mandatory="true" prompt="When was your diagnosis made?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
					<column_definitions>
						<column_definition label="Month" pct="25"/>
						<column_definition label="Year" pct="25"/>
					</column_definitions>
			</table_response>
		</question>
				
		<question mandatory="true" prompt="When were you last examined by your physician for your current condition (one you are requesting a second opinion for)?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
					<column_definitions>
							<column_definition label="Month" pct="25"/>
							<column_definition label="Year" pct="25"/>
					</column_definitions>
			</table_response>
			</question>
			
		<question mandatory="true" prompt="Has your physician indicated a cause for your condition?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please explain:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
			
		<question mandatory="true" prompt="Do you feel as if your general health has deteriorated as a result of this condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		
		
		<question mandatory="true" prompt="As related to your current problem (condition for which you are seeking a second opinion) how was your diagnosis made? (choose all that apply)">
								<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="X-rays"/>
							<selection selected="false" text="Ultrasound"/>
							<selection selected="false" text="Pancreatic function test"/>
							<selection selected="false" text="Blood tests"/>
							<selection selected="false" text="Barium Swallow"/>
							<selection selected="false" text="Upper Endoscopy"/>
							<selection selected="false" text="Endoscopic Retrograde Cholangiopancreatography(ERCP)"/>
							<selection selected="false" text="CT Scan"/>
							<selection selected="false" text="MRI Scan"/>
							<selection selected="false" text="Nuclear Scan"/>
							<selection selected="false" text="Urine tests"/>
							<selection selected="false" text="Stool (feces) test"/>
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="None of above"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="if other, please list">
									<free_form_response height="5"/>
								</question>
							</selection>	
						</item_response>
					
		</question>
	
		<question mandatory="true" prompt="For how long have you had this problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Less than one month"/>
				<selection selected="false" text="1-3 months"/>
				<selection selected="false" text="4-6 months"/>
				<selection selected="false" text="7-12 months"/>
				<selection selected="false" text="Greater than 12 months"/>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Are your symptoms?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Please list all imaging studies done/dates done">
			<table_response add_row_increment="2" row_height="2">
				<column_definitions>
						<column_definition label="Study" pct="50"/>
						<column_definition label="Month" pct="25"/>
						<column_definition label="Year" pct="25"/>
				</column_definitions>
					<table_data>
							<cell>X-rays</cell>
							<cell/>
							<cell/>
					</table_data>
					<table_data>
							<cell>Ultrasound</cell>
							<cell/>
							<cell/>
					</table_data>
					<table_data>
							<cell>Barium Swallow</cell>
							<cell/>
							<cell/>
					</table_data>
					<table_data>
							<cell>Upper Endoscopy</cell>
							<cell/>
							<cell/>
					</table_data>
					<table_data>
							<cell>CT scan</cell>
							<cell/>
							<cell/>
					</table_data>
					<table_data>
							<cell>MRI scan</cell>
							<cell/>
							<cell/>
					</table_data>
					<table_data>
							<cell>Nuclear Scan</cell>
							<cell/>
							<cell/>
					</table_data>
					<table_data>
							<cell>None of above</cell>
							<cell/>
							<cell/>
					</table_data>
					<table_data>
							<cell>Other (Please list below)</cell>
							<cell/>
							<cell/>
					</table_data>
			</table_response>
			<question  prompt="If other, please list:">
						<free_form_response height="5"/>
					</question>
		</question>
		<question mandatory="true" prompt="Are you experiencing any pain or discomfort?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, where is the pain located?">
						<free_form_response height="5"/>
					</question>
					
					<question mandatory="true" prompt="Please rate your pain on the scale of 1-10 below with '1' being minimal discomfort and '10' being the worst pain.">
						<item_response single_response="true" drop_down_style="false">
							<selection selected="false" text="1"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="5"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="10"/>
						</item_response>
					</question>
					<question prompt="When did the symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
	
		<question mandatory="true" prompt="Are you experiencing heartburn?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="yes, when did this symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Are you experiencing nausea?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="yes, when did this symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
	
		<question mandatory="true" prompt="Are you experiencing regurgitation (vomiting)?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, when did this symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		
					
		<question mandatory="true" prompt="Do you ever experience hematemesis (vomiting of blood)?">
				<item_response single_response="true" drop_down_style="false">
						<selection selected="false" text="Not sure"/>
						<selection selected="false" text="No"/>
						<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If yes, when did this symptom begin?">
									<table_response initial_rows_to_display="1" add_row_increment="0">
										<column_definitions>
											<column_definition label="Month" pct="25"/>
											<column_definition label="Year" pct="25"/>
										</column_definitions>
									</table_response>
								</question>
						</selection>
					</item_response>
			</question>
			
	
		<question mandatory="true" prompt="Are you experiencing difficulty swallowing?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, when did this symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Do you have a history of upper gastrointestinal (GI) bleeding?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="yes, please provide details of the bleeding and how it was treated:">
						<free_form_response height="8"/>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Have you noticed that your stools (bowel movements) have blood or a dark tarry color?">
			<item_response single_response="true" drop_down_style="false">
			<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, when did this symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Do you have varices (enlarged veins) of the esophagus and / or stomach?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, have you experienced variceal bleeding?">
						<item_response single_response="true" drop_down_style="false">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If yes, when did this symptom begin?">
									<table_response initial_rows_to_display="1" add_row_increment="0">
										<column_definitions>
											<column_definition label="Month" pct="25"/>
											<column_definition label="Year" pct="25"/>
										</column_definitions>
									</table_response>
								</question>
								<question mandatory="true" prompt="how were the bleeding varices treated? (choose all that apply)">
									<item_response single_response="false" drop_down_style="false">
										<selection selected="false" text="sclerotherapy"/>
										<selection selected="false" text="band ligation"/>
										<selection selected="false" text="TIPS (Transjugular Intrahepatic Portosystemic Shunting)"/>
										<selection selected="false" text="surgery"/>
										<selection selected="false" text="Other">
											<question mandatory="true" prompt="if other, please provide details">
												<free_form_response height="5"/>
											</question>
										</selection>
									</item_response>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Do you ever experience fever?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, when did this symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Do you experience a rapid pulse?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, when did this symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
				
		<question mandatory="true" prompt="Do you experience fatigue (tiredness) compared to others in your age group?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, when did this symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
					
		<question mandatory="true" prompt="Do you experience weakness?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, when did this symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Do you experience loss of appetite?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If  yes,  when did this symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>		
				
		<question mandatory="true" prompt="Have you experienced a recent unintentional weight loss?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, when did this symptom begin?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>	
					</question>	
					<question mandatory="true" prompt="If yes, please provide additional info below:">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="number of pounds / kilograms lost" pct="25"/>
								<column_definition label="over what period of time?" pct="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Have you ever been told that you have gallstones?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, when?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Month" pct="25"/>
								<column_definition label="Year" pct="25"/>
							</column_definitions>
						</table_response>	
					</question>	
					<question mandatory="true" prompt="What has been done regarding this condition (gallstones)?">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
					
		<question mandatory="true" prompt="Are you currently having any other symptoms?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="if yes, please describe in detail below:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Have you experienced complications from your condition?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please choose from the list below (choose all that apply):">
						<item_response single_response="false"  drop_down_style="false">
							<selection selected="false" text="Infection"/>
							<selection selected="false" text="Organ failure"/>
							<selection selected="false" text="Pseudocysts"/>	
							<selection selected="false" text="Dust obstruction"/>
							<selection selected="false" text="Abscess"/>
							<selection selected="false" text="Respiratory failure"/>
							<selection selected="false" text="Shock"/>
							<selection selected="false" text="Bleeding"/>
							<selection selected="false" text="Malnutrition"/>	
							<selection selected="false" text="Weight loss"/>
							<selection selected="false" text="Diabetes"/>
							<selection selected="false" text="Addiction to pain medication"/>
							<selection selected="false" text="Pancreatic Cancer"/>
							<selection selected="false" text="None of above"/>	
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please list:">
									<free_form_response height="5"/>
								</question>
							</selection>
						</item_response>
					</question>	
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="Has the condition form which you are seeking a second opinion been previously treated?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="if yes, please describe all treatments you have undergone in detail below:">
						<free_form_response height="8"/>
					</question>
				</selection>
			</item_response>
		</question>
		
		<question mandatory="true" prompt="What has been recommended regarding treatment for your current condtion? (medical management, surgery, etc.)">
			<free_form_response height="8"/>
		</question>
				
		<question mandatory="true" prompt="Which physician made this recommendation?">
			<table_response add_row_increment="2" row_height="2">
				<column_definitions>
							<column_definition label="Name of Physician" pct="25"/>
							<column_definition label="Specialty (primary care physician, gastroenterologist, etc." pct="40"/>
				</column_definitions>
			</table_response>
		</question>	
					
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>	
	
</questionnaire>
