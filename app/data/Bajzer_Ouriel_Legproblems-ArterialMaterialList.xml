<material_list>
      &MATERIAL_LIST_INTRODUCTORY_INSTRUCTION;
	<material id="Primary physician or specialist physician's last report" description="Report should contain a current physical assessment of the patient's condition and a description of current signs and symptoms. This can be written by either your primary care physician or the physician who diagnosed or is treating your condition." mandatory="true"/>
	<material id="Physician's letters" description="Copies of all letters sent to you by your physician(s) of last visit(s), if received." mandatory="true"/>
	<material id="Doctor's notation of medications" description="Note should clearly indicate current listing of all medications (prescription, over the counter and vitamins)." mandatory="true"/>
	<material id="Operative reports" description="Operative reports for all vascular and / or heart surgeries." mandatory="true"/>
	<material id="Discharge summaries" description="Discharge summaries from any recent (within 1 year) hospitalizations." mandatory="true"/>
	<instruction text="&lt;BR&gt;&lt;B&gt;  The following radiology and diagnostic studies done in the last 3 years are required.  If indicated, the actual original films (not copies) of the studies and reports will be needed.&lt;/B&gt;"/>
	<material id="Doppler studies (Duplex ultrasound)" description="Reports and films." mandatory="true"/>
	<material id="Peripheral angiography" description="Report of the most recent peripheral angiography and/or procedural note and any peripheral intervention and the films for these tests." mandatory="true"/>
	<material id="Cardiac stress test" description="Report of most recent cardiac stress test (if done). Note:  If this was a nuclear stress test, the actual images will need to be sent." mandatory="true"/>
	<material id="Cardiac catheterization " description="Results of most recent cardiac catheterization (report only) (if done)." mandatory="true"/>
	<instruction text="&lt;BR&gt;&lt;B&gt;  The following laboratory tests results  to include the following: &lt;/B&gt;"/>
	<material id="Cholesterol level" description="Laboratory blood test report." mandatory="true"/>
	<material id="LDL and HDL " description="Laboratory blood test report." mandatory="true"/>
	<instruction text="&lt;BR&gt;&lt;B&gt;  The following list of medical information although not mandatory, are optional, if done: &lt;/B&gt;"/>
	<material id="Current blood work (within last 6 months). " description="Laboratory blood test report (if done)." mandatory="false"/>
	<material id="Chest X-ray " description="Report only, however, if exam is  is abnormal, the actual films will need to be sent." mandatory="false"/>
	<material id="Electrocardiogram (EKG) (ECG)" description="Report only (if done)" mandatory="false"/>
	<material id="CT Scan " description="Report and films (if done)" mandatory="false"/>
	<material id="MRI Scan" description="Reports and films (if done)." mandatory="false"/>
	<material id="Echocardiogram " description="Report of the most recent echocardiogram (either transthoracic or transesophageal) The actual CD of this test will be helpful but not absolutely necessary." mandatory="false"/>
	<material id="Pulse volume " description="Report of the most recent pulse volume recording (if done)." mandatory="false"/>
	<material id="Plethysmography" description="Report of the most recent plethysmography (if done). " mandatory="false"/>
	<material id="Ankle brachial indices" description="Report of the most recent ankle brachial indices (if done)." mandatory="false"/>
	<material id="Captopril renin nuclear testing" description="Report of the most recent captopril renin nuclear testing" mandatory="false"/>
	<material id="Other non-invasive assessmant" description="Report of any other non-invasive assessment of peripheral vascular disease" mandatory="false"/>
	<material id="Other" description="Any other medical information you or your physician may feel is pertinent to this consultation." mandatory="false"/>
  &MATERIAL_LIST_CLOSING_INSTRUCTION;
</material_list>
