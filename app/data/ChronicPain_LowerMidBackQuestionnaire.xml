					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Have you had spine surgery ?">
			  <item_response drop_down_style="false" single_response="true">
			  <selection selected="false" text="No"/>
			  <selection selected="false" text="Yes">
			 	 <question mandatory="true" prompt="If yes, how many times ? ">
			 	 	<free_form_response height="2"/>
			 	 </question>
			  </selection>
			  </item_response>
		</question>
		<question mandatory="false" prompt="Please give the approximate year, location(city / hospital), surgeon, and type of surgery for each that you have had.(You may abbreviate L = laminectomy, D = discectomy, Fu = fusion, Fo = foraminotomy, HR = hardware removal, I = infection treatment, DK if don't know)">
			<table_response add_row_increment="1" initial_rows_to_display="5">
			 <column_definitions>
			 	 <column_definition label="" width="2"/>
			 	 <column_definition label="Year" width="10"/>
			 	 <column_definition label="Location" width="10"/>
			 	 <column_definition label="Surgeon" width="30"/>	
			 	 <column_definition label="Type Operation" width="30"/>	
