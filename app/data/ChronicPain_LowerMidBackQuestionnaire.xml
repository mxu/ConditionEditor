<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<!-- Lower Back Questionnaire -->
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Approximate age or year when you first had spine pain ?">
			<free_form_response height="2"/>
		</question>	
		<question mandatory="true" prompt="Did the problem begin with an accident / injury / illness ?">
			  <item_response drop_down_style="false" single_response="true">
			  <selection selected="false" text="Unsure"/>
			  <selection selected="false" text="No"/>
			  <selection selected="false" text="Yes">
			 	 <question mandatory="true" prompt="If Yes, Describe how pain began.">
			 	 	<free_form_response height="5"/>
			 	 </question>
			  </selection>
			  </item_response>
		</question>
		<question mandatory="true" prompt="Do you currently have an active Workman's Compensation claim or active litigation (law suit) in progress related to the cause of your pain ?">
		  <item_response drop_down_style="false" single_response="true">
			  <selection selected="false" text="No"/>
			  <selection selected="false" text="Yes">
			 	 <question mandatory="true" prompt=" If yes, please explain">
			 	 	<free_form_response height="2"/>
			 	 </question>			 	 			  
			  </selection>
		  </item_response>
		</question>
		<question mandatory="true" prompt="What diagnosis has the patient been given?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="What type of physician made this diagnosis?">
			 <table_response add_row_increment="0" initial_rows_to_display="1">
			  <column_definitions>
			 	<column_definition label="Physician Name" width="20"/>
			 	<column_definition label="Physician Speciality (Neurology, Primary Care, Pain Specialist, etc.)" width="50"/>		 	 	 		
			  </column_definitions>
			  <table_data>
			 	 <cell></cell>
			 	 <cell/>
			 </table_data>
		  </table_response>
		</question>
		<question mandatory="true" prompt="Has the pain changed over time?">
			  <item_response drop_down_style="false" single_response="true">
			  <selection selected="false" text="Unsure"/>
			  <selection selected="false" text="No"/>
			  <selection selected="false" text="Yes">
			 	 <question mandatory="true" prompt="If yes, please describe how it has changed and over what period of time?">
			 	 	<free_form_response height="5"/>
			 	 </question>
			  </selection>
			  </item_response>
		</question>
		<question mandatory="true" prompt="Does the back pain radiate down the leg ?">
			  <item_response drop_down_style="false" single_response="true">
			  <selection selected="false" text="No"/>
			  <selection selected="false" text="Yes">
			 	 <question mandatory="true" prompt="If so, how far ( to buttock, knee, foot ) ?">
			 	 	<free_form_response height="3"/>
			 	 </question>
			 	  <question mandatory="true" prompt="What percentage of the pain is in your back ?">
			 	 	<free_form_response height="1"/>
			 	 </question>
			 	  <question mandatory="true" prompt="What percentage of pain is in your leg ?">
			 	 	<free_form_response height="1"/>
			 	 </question>
			  </selection>
			  </item_response>
		</question>
		<question mandatory="false" prompt="Have you noticed that pain is worse in certain positions ? ( Check activities that worsen pain )">
			  <item_response drop_down_style="false" single_response="false">
			  <selection selected="false" text="Sitting"/>
			  <selection selected="false" text="Standing straight up"/>
			  <selection selected="false" text="Bending forward"/>
			  <selection selected="false" text="Lying down"/>
			  <selection selected="false" text="Other">
			  	 <question mandatory="true" prompt="If other, please specify in detail below: ">
			 	 	<free_form_response height="3"/>
			 	 </question>
			  </selection>
			  </item_response>
		</question>
		<question mandatory="false" prompt="Are there positions that reduce pain ? ( Check positions that help pain )">
		  <item_response drop_down_style="false" single_response="true">
			  <selection selected="false" text="Sitting"/>
			  <selection selected="false" text="Standing straight up"/>
			  <selection selected="false" text="Bending forward"/>
			  <selection selected="false" text="Lying down"/>
			  <selection selected="false" text="Other">
			  	 <question mandatory="true" prompt="If other, please specify in detail below: ">
			 	 	<free_form_response height="2"/>
			 	 </question>
			  </selection>
		  </item_response>
		</question>
		<question mandatory="true" prompt="Do you have any loss of function ?( Weakness / paralysis, Reduced control of bladder or bowel function, Inability to function sexually )">
			  <item_response drop_down_style="false" single_response="true">
			  <selection selected="false" text="No"/>
			  <selection selected="false" text="Yes">
			 	 <question mandatory="true" prompt="Describe:">
			 	 	<free_form_response height="2"/>
			 	 </question>
			  </selection>
			  </item_response>
		</question>
		<question mandatory="true" prompt="What types of specialists evaluated you for this pain? (Primary Care, Neurologist, Pain Specialist, Orthopaedist, etc.)">
			<free_form_response height="5"/>
		</question>
		<question mandatory="false" prompt="What imaging studies have you had most recently? Please note the year and results, if known">
		    <table_response add_row_increment="0" initial_rows_to_display="1">
			  <column_definitions>
			 	<column_definition label="Study" width="15"/>
			 	<column_definition label="Year" width="10"/>
			 	<column_definition label="Results" width="50"/>			 	 	 		
			  </column_definitions>
			  <table_data>
			 	 <cell>Plain x-rays</cell>
			 	 <cell/>
			 	 <cell/>
			 </table_data>
			 <table_data>
