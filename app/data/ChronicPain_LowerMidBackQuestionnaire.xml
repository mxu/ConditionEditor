			 </table_data>
			   <table_data>
			 	 <cell></cell>
			 	 <cell/>
			 	 <cell/>
			 </table_data>
			   <table_data>
			 	 <cell></cell>
			 	 <cell/>
			 	 <cell/>
			 </table_data>
		  </table_response>
	      </question>
	      <question mandatory="true" prompt="Please list the electrodiagnostic studies that have been completed.">
		   <table_response add_row_increment="0" initial_rows_to_display="1">
			  <column_definitions>
			 	<column_definition label="Study" width="40"/>
			 	<column_definition label="Year" width="10"/>
			 	<column_definition label="Results" width="50"/>			 	 	 		
			  </column_definitions>
			  <table_data>
			 	 <cell>EMG(Electromyography)</cell>
			 	 <cell/>
			 	 <cell/>
			 </table_data>
			 <table_data>
			 	 <cell>Nerve Conduction Study</cell>
			 	 <cell/>
