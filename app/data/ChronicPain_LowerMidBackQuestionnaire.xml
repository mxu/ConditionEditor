			 </table_data>
			 <table_data>
			 	 <cell>Electrical studies of the legs</cell>
			 	 <cell/>
			 	 <cell/>
			 </table_data>
			  <table_data>
			 	 <cell></cell>
			 	 <cell/>
			 	 <cell/>
			 </table_data>
			  <table_data>
			 	 <cell></cell>
			 	 <cell/>
			 	 <cell/>
			 </table_data>
			   <table_data>
			 	 <cell></cell>
			 	 <cell/>
			 	 <cell/>
			 </table_data>
		  </table_response>
		</question>
		<question mandatory="false" prompt="What treatments have you tried for pain relief?">
		<table_response add_row_increment="1" initial_rows_to_display="1">
				<column_definitions>
					<column_definition label="Type of Treatment" width="25"/>
					<column_definition label="Month/Year" width="15"/>
					<column_definition label="Physician Name or type of physician" width="35"/>
