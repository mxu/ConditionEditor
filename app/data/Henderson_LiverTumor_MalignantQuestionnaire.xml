<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Do you have a prior history of tumors?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have a prior history of tumors, please provide the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="1">
							<column_definitions>
								<column_definition label="Type of cancer" width="30"/>
								<column_definition label="Date of diagnosis (Month/Year)" width="25"/>
								<column_definition label="Type of treatment, if any" width="30"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City,State" width="15"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has your current problem been diagnosed as a malignant tumor?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your current problem been diagnosed as a malignant tumor, how was your diagnosis made?">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Biopsy"/>
							<selection selected="false" text="Surgery"/>
							<selection selected="false" text="X-ray"/>
							<selection selected="false" text="CT scan"/>
							<selection selected="false" text="MRI scan"/>
							<selection selected="false" text="Blood work"/>
							<selection selected="false" text="Bone scan"/>
							<selection selected="false" text="Unknown"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please list:">
									<free_form_response height="2"/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="When was your diagnosis made?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="What is the diagnosis?">
			<free_form_response/>
		</question>
		<question mandatory="true" prompt="What is the location of your tumor?">
			<free_form_response height="2"/>
		</question>
		<question mandatory="true" prompt="When where you last examined by your physician for your current condition?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="Is there a mass?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If there is a mass, how large is the mass?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Less than 5cm (2 inches)"/>
							<selection selected="false" text="5-10cm (2-4 inches)"/>
							<selection selected="false" text="Greater than 10cm (4inches)"/>
							<selection selected="false" text="Not sure"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Is the mass?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Hard"/>
							<selection selected="false" text="Soft"/>
							<selection selected="false" text="Not sure"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Is the mass getting?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Larger"/>
							<selection selected="false" text="Smaller"/>
							<selection selected="false" text="Staying the same"/>
							<selection selected="false" text="Fluctuating in size"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="How long have you had this problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Less than one month"/>
				<selection selected="false" text="1-3 months"/>
				<selection selected="false" text="4-6 months"/>
				<selection selected="false" text="7-12 months"/>
				<selection selected="false" text="Greater than 12 months"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="false" prompt="If you have a history of any of the following conditions, provide date of diagnosis:">
			<table_response add_row_increment="2">
				<column_definitions>
					<column_definition label="Condition" width="70"/>
					<column_definition label="Month" width="15"/>
					<column_definition label="Year" width="15"/>
				</column_definitions>
				<table_data>
					<cell>Clotting disorders</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Alcoholic liver disease</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Cirrhosis of liver</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Hepatitis B (infectious)</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Hepatitis C (viral)</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Liver cancer</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Portal hypertension</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Sclerosing cholangitis</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other (Please list below)</cell>
					<cell/>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Are you experiencing pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are experiencing pain, what is the location of the pain?">
						<free_form_response width="30"/>
					</question>
					<question mandatory="true" prompt="Please rate your pain on the scale below (1=minimal pain, 10=worst pain)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst pain"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate Pain"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal pain"/>
						</item_response>

					</question>
					<question mandatory="true" prompt="Do you experience pain at night while resting?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If you experience pain at night while resting, does it prevent you from falling asleep or does it wake you up during the night?">
									<item_response drop_down_style="false" single_response="true">
										<selection selected="false" text="Not sure"/>
										<selection selected="false" text="No"/>
										<selection selected="false" text="Yes"/>
									</item_response>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="Have you had any of the following studies?  If so, when?">
			<table_response add_row_increment="2">
				<column_definitions>
					<column_definition label="Study" width="70"/>
					<column_definition label="Month" width="15"/>
					<column_definition label="Year" width="15"/>
				</column_definitions>
				<table_data>
					<cell>X-rays</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>CT scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>MRI scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Ultrasound</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Arteriogram</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Bone scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other (Please list below)</cell>
					<cell/>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Please indicate below all the treatments you have undergone thus far for your condition:">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Surgery">
					<question mandatory="true" prompt="Please list any surgical treatment you have received for your diagnosis:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Type of procedure" width="15"/>
								<column_definition label="Month/Year" width="25"/>
								<column_definition label="Physician" width="15"/>
								<column_definition label="Hospital/Clinic" width="15"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="What is your overall satisfaction with the treatment? (1-not at all satisfied, 10-very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
					<question mandatory="true" prompt="If you have undergone surgical treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
				</selection>
				<selection selected="false" text="Ablation therapy">
					<question mandatory="true" prompt="Please list any ablation therapy you have received for your diagnosis:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Physician" width="10"/>
								<column_definition label="Hospital/Clinic" width="15"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="What is your overall satisfaction with the treatment? (1-not at all satisfied, 10-very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
					<question mandatory="true" prompt="If you have undergone ablation therapy, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
				</selection>
				<selection selected="false" text="Chemotherapy">
					<question mandatory="true" prompt="Please list any chemotherapy you have received for your diagnosis:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Name of chemotherapy" width="20"/>
								<column_definition label="# of cycles" width="15"/>
								<column_definition label="Protocol name or number" width="10"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Physician" width="15"/>
								<column_definition label="Hospital/Clinic" width="15"/>
								<column_definition label="City,State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="What is your overall satisfaction with the treatment? (1-not at all satisfied, 10-very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

					</question>
					<question mandatory="true" prompt="If you have undergone chemotherapy, what is your general subjective 	impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="Please list any experimental or alternative treatment you have received for your diagnosis:">
			<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
				<column_definitions>
					<column_definition label="Name of treatment" width="25"/>
					<column_definition label="Month/Year" width="10"/>
					<column_definition label="Physician" width="20"/>
					<column_definition label="Hospital/Clinic" width="20"/>
					<column_definition label="City, State" width="20"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What is your overall satisfaction with the treatment? (1-not at all satisfied, 10-very satisfied)">
			<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>

		</question>
		<question mandatory="false" prompt="If you have undergone experimental or alternative treatment, what is your general subjective impression of the experience?  (In your own words)">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding the treatment of your current condition?  (surgery, medical management, etc.)">
			<free_form_response height="2"/>
		</question>
		<question mandatory="true" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
				<column_definitions>
					<column_definition label="Physician name" width="30"/>
					<column_definition label="Specialty (oncologist, primary care, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What have the doctors stated regarding your prognosis (forecast of the probable course of the disease)?">
			<free_form_response height="2"/>
		</question>
		<question mandatory="false" prompt="What are the primary hopes and expectations that you have regarding this consultation?">
			<free_form_response height="2"/>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
