<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Do you have a family history of cancer?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have a family history of cancer, please specify family member (maternal or paternal side), type of cancer, age at diagnosis, etc. below:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Family member &lt;BR&gt; (mother, father,sibling)?" width="25"/>
								<column_definition label="Type of cancer" width="25"/>
								<column_definition label="Age at diagnosis &lt;BR&gt; (if known)" width="30"/>
								<column_definition label="Current condition &lt;BR&gt; of relative" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a prior history of any urological disorders?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have a prior history of any urological disorders, please provide additional information below:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of condition" width="30"/>
								<column_definition label="Date (Month/Year) &lt;BR&gt; of diagnosis " width="20"/>
								<column_definition label="Type of treatment " width="30"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="As related to your current condition (one you are requesting second opinion for) how was your diagnosis made? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="X-rays"/>
				<selection selected="false" text="IVP"/>
				<selection selected="false" text="Ultrasound"/>
				<selection selected="false" text="Urethroscopy"/>
				<selection selected="false" text="Cystoscopy"/>
				<selection selected="false" text="Urodynamics"/>
				<selection selected="false" text="VCUG"/>
				<selection selected="false" text="CT scan"/>
				<selection selected="false" text="MRI scan"/>
				<selection selected="false" text="Urinalysis"/>
				<selection selected="false" text="Urine culture "/>
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please explain below:">
						<free_form_response/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="When was your diagnosis made?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="What is your diagnosis?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="When were you last examined by your physician for your condition (one you are seeking a second opinion for)?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="For how long have you had this problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Less than a month"/>
				<selection selected="false" text="1-3 months"/>
				<selection selected="false" text="4-6 months"/>
				<selection selected="false" text="7-12 months"/>
				<selection selected="false" text="Greater than 12 months"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are your symptoms?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you feel as if your general health has deteriorated as a result of this condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you feel as if your general health has deteriorated as a result of this condition, please explain below:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has the condition for which you are seeking a second opinion been previously treated?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If the condition for which you are seeking a second opinion has been previously treated, please provide additional information below:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of treatment" width="30"/>
								<column_definition label="Date (Month/Year)" width="20"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="30"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have been treated for your current condition, what is your general subjective impression of the experience? (in your own words)">
						<free_form_response height="10"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you experiencing any difficulty in urination such as frequency, urgency, burning or pain on urination, blood in urine, etc.?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are experiencing any difficulty in urination, please explain in detail below (give examples of the problem(s) if possible):">
						<free_form_response height="10"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you been told you have an infection (bladder, urinary tract)  associated with your condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have been told you have an infection, have you been prescribed medication(s) for the infection?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If you have been prescribed medication(s), please provide additional information below:">
									<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
										<column_definitions>
											<column_definition label="Name of medication" width="25"/>
											<column_definition label="Dosage (if known)" width="25"/>
											<column_definition label="Date started" width="20"/>
											<column_definition label="How taken? &lt;BR&gt; (pills, IV, etc)" width="25"/>
										</column_definitions>
									</table_response>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has your physician prescribed any other medication(s) for your current condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If your physician prescribed any other medication(s) for your current condition, please provide additional information below:">
							<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
								<column_definitions>
									<column_definition label="Name of medication" width="25"/>
									<column_definition label="Dosage (if known)" width="25"/>
									<column_definition label="Date started" width="20"/>
									<column_definition label="How taken? &lt;BR&gt; (pills, IV, etc)" width="25"/>
								</column_definitions>
							</table_response>
						</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you experiencing pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are experiencing pain, location of pain?">
						<free_form_response/>
					</question>
					<question mandatory="true" prompt="Please rate your pain on the scale below: (1= Minimal pain, 10= Worst pain)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst pain"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate Pain"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal pain"/>
						</item_response>

					</question>
					<question mandatory="true" prompt="Does your pain  awaken you from sleep?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If your pain  awakens you from sleep, how often?">
									<item_response drop_down_style="false" single_response="true">
										<selection selected="false" text="Frequently"/>
										<selection selected="false" text="Occasionally"/>
										<selection selected="false" text="Rarely"/>
									</item_response>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding treatment for your current condition? (medical management, surgery, etc.)">
			<free_form_response height="6"/>
		</question>
		<question mandatory="false" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0" row_height="1">
				<column_definitions>
					<column_definition label="Physician" width="25"/>
					<column_definition label="Specialty (primary care &lt;BR&gt; physician, urologist, &lt;BR&gt; primary care physician, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
