							<selection text="No" selected="false"/>
							<selection text="Yes" selected="false"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="If you are experiencing pain, which areas of your body have the worst pain?">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Neck"/>
							<selection selected="false" text="Back"/>
							<selection selected="false" text="Arm"/>
							<selection selected="false" text="Leg"/>
							<selection selected="false" text="Neck and arm pain are equal"/>
							<selection selected="false" text="Back and leg pain are equal"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please list:">
									<free_form_response/>
								</question>
							</selection>
						</item_response>
					</question>
					<question prompt="Please rate your pain below: (1= minimal pain, 10= worst pain)" mandatory="true">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst pain"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate Pain"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal pain"/>
						</item_response>

					</question>
					<question mandatory="true" prompt="Indicate which of the following activities increase your pain: (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Exercise"/>
							<selection selected="false" text="Sitting"/>
							<selection selected="false" text="Standing"/>
							<selection selected="false" text="Walking"/>
							<selection selected="false" text="Twisting"/>
							<selection selected="false" text="Bending forward"/>
							<selection selected="false" text="Bending backward"/>
							<selection selected="false" text="Coughing"/>
							<selection selected="false" text="Sneezing"/>
							<selection selected="false" text="Sleeping"/>
							<selection selected="false" text="Walking up stairs"/>
							<selection selected="false" text="Walking down stairs"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please list:">
									<free_form_response/>
								</question>
							</selection>
						</item_response>
					</question>
					<question mandatory="true" prompt="Indicate which of the following activities decrease your pain: (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Lying down"/>
							<selection selected="false" text="Sitting"/>
							<selection selected="false" text="Standing"/>
							<selection selected="false" text="Walking"/>
							<selection selected="false" text="Physical therapy"/>
							<selection selected="false" text="Pain pills"/>
							<selection selected="false" text="Muscle relaxants"/>
							<selection selected="false" text="Anti-inflammatories"/>
							<selection selected="false" text="Other activities">
								<question mandatory="true" prompt="If other activities, please list:">
									<free_form_response/>
								</question>
							</selection>
							<selection selected="false" text="Other medications">
								<question mandatory="true" prompt="If other medications, please list:">
									<free_form_response/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
