<question mandatory="true" prompt="Is there a specific physician that you would like to request for this consultation?">
	<item_response drop_down_style="false" single_response="true">
		<selection selected="false" text="No"/>
		<selection selected="false" text="Yes">
			<question mandatory="true" prompt="If yes, please list the physician's name">
				<free_form_response height="2"/>
			</question>
		</selection>
	</item_response>
</question>
<question mandatory="true" prompt="How long has the patient considered having this surgery done?">
	<free_form_response height="2"/>
</question>
<question mandatory="true" prompt="What are the patient's expectations for this surgery?">
	<free_form_response height="2"/>
</question>
<question mandatory="true" prompt="Has the patient had any cosmetic or reconstructive surgery in the past?">
	<item_response drop_down_style="false" single_response="true">
		<selection selected="false" text="No"/>
		<selection selected="false" text="Yes">
			<question mandatory="true" prompt="If yes, please provide the following information:">
				<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
					<column_definitions>
						<column_definition label="Year" width="8"/>
						<column_definition label="Type of procedure" width="20"/>
						<column_definition label="Not Sure" width="5"/>
						<column_definition label="Physician" width="15"/>
						<column_definition label="Hospital/Clinic" width="25"/>
						<column_definition label="City, State" width="35"/>
					</column_definitions>
				</table_response>
			</question>
		</selection>
	</item_response>
</question>

