<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Do you have a family history of bone or limb problems?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you had other fracture and / or limb problems in the past (prior to the development of your current problem)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please provide the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="1">
							<column_definitions>
								<column_definition label="Diagnosis" width="25"/>
								<column_definition label="Month/Year" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="How long have you had this problem (the one that you are seeking the second opinion for)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Less than one month"/>
				<selection selected="false" text="1-3 months"/>
				<selection selected="false" text="4-6 months"/>
				<selection selected="false" text="7-12 months"/>
				<selection selected="false" text="Greater than 12 months"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the problem?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Getting worse"/>
				<selection selected="false" text="Getting better"/>
				<selection selected="false" text="Staying the same"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="What is the cause of your current problem? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Work injury"/>
				<selection selected="false" text="Road traffic accident"/>
				<selection selected="false" text="Sports injury"/>
				<selection selected="false" text="No specific injury"/>
				<selection selected="false" text="Fall"/>
				<selection selected="false" text="Previous cortisone or steroid use"/>
				<selection selected="false" text="Exposure to hyperbaric condition"/>
				<selection selected="false" text="Lipid disorder"/>
				<selection selected="false" text="Blood disorder(s)"/>
				<selection selected="false" text="Sickle cell anemia"/>
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please list:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="If your current problem is the result of an injury, please provide the date and a brief description of the event/">
			<table_response initial_rows_to_display="1" add_row_increment="1" row_height="1">
				<column_definitions>
					<column_definition label="Date(Month/Year)" width="20"/>
					<column_definition label="Brief Description" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="Have you had any previous joint surgery?">
			<item_response single_response="true">
				<selection selected="false" text="Not Sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Month/Year" width="20"/>
								<column_definition label="Surgery/Procedure" width="25"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital" width="20"/>
								<column_definition label="Location(City, State)" width="20"/>
								<column_definition label="Rate success of surgery &lt;BR&gt;1=Unsuccessful 10=Successful" width="30"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you had surgery, what is your general subjective impression of the experience and outcome(success) of the procedure?">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the surgery, how would you rate your overall satisfaction with the experience? (1= not all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Which of the following BEST describes your usual level of activity (functioning ability)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="I am mostly wheel chair bound"/>
				<selection selected="false" text="I can comfortably walk around the house"/>
				<selection selected="false" text="I can comfortably walk around the neighborhood"/>
				<selection selected="false" text="I frequently need to use a cane, crutches, walker or other assistive device"/>
				<selection selected="false" text="I have trouble with self care such as bathing, dressing or housework"/>
				<selection selected="false" text="I can generally walk more than a mile"/>
				<selection selected="false" text="I can participate in recreational sports or activities"/>
				<selection selected="false" text="I can participate in vigorous sports and activities"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you regularly use any of the following assistive devices? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Cane"/>
				<selection selected="false" text="Crutches"/>
				<selection selected="false" text="Walker"/>
				<selection selected="false" text="Wheelchair"/>
				<selection selected="false" text="Brace"/>
				<selection selected="false" text="AFO (Ankle Foot Arthrosis)"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please specify:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question prompt="Are you experiencing pain?" mandatory="true">
			<item_response drop_down_style="false" single_response="true">
				<selection text="No" selected="false"/>
				<selection text="Yes" selected="false">
					<question mandatory="true" prompt="If yes, is the pain constant?">
						<item_response drop_down_style="false" single_response="true">
							<selection text="No" selected="false"/>
							<selection text="Yes" selected="false"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="If yes, which area of your body has the worst pain?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not applicable"/>
							<selection selected="false" text="Arm"/>
							<selection selected="false" text="Shoulder"/>
							<selection selected="false" text="Hip"/>
							<selection selected="false" text="Back"/>
							<selection selected="false" text="Leg"/>
							<selection selected="false" text="Knee"/>
							<selection selected="false" text="Hip and back equally painful"/>
							<selection selected="false" text="Knee and leg equally painful"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please specify:">
									<free_form_response height="2"/>
								</question>
							</selection>
						</item_response>
					</question>
					<question prompt="Please rate your pain on the scale below: (1= minimal pain, 10= severe pain)" mandatory="true">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst pain"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate Pain"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal pain"/>
							<selection selected="false" text="N/A"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Does your pain disturb your sleep?">
						<item_response drop_down_style="false" single_response="true">
							<selection text="Not Applicable" selected="false"/>
							<selection text="No" selected="false"/>
							<selection text="Yes" selected="false"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Do you need to get out of bed during the night because of your pain?">
						<item_response drop_down_style="false" single_response="true">
							<selection text="Not Applicable" selected="false"/>
							<selection text="No" selected="false"/>
							<selection text="Yes" selected="false"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Does your pain tend to improve with moderate physical activity?">
						<item_response drop_down_style="false" single_response="true">
							<selection text="Not Applicable" selected="false"/>
							<selection text="No" selected="false"/>
							<selection text="Yes" selected="false"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Is there visible movement of the fracture site?">
						<item_response drop_down_style="false" single_response="true">
							<selection text="Not Applicable" selected="false"/>
							<selection text="No" selected="false"/>
							<selection text="Yes" selected="false"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Please indicate which of the following activities increase your pain? (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Exercise"/>
							<selection selected="false" text="Sitting"/>
							<selection selected="false" text="Standing"/>
							<selection selected="false" text="Walking"/>
							<selection selected="false" text="Twisting"/>
							<selection selected="false" text="Lifting arm"/>
							<selection selected="false" text="Coughing/Sneezing"/>
							<selection selected="false" text="sneezing"/>
							<selection selected="false" text="sleeping"/>
							<selection selected="false" text="Walking up or down stairs"/>
							<selection selected="false" text="Getting up from chair"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please list:">
									<free_form_response height="3"/>
								</question>
							</selection>
						</item_response>
					</question>
					<question mandatory="true" prompt="Please indicate which of the following activities decrease your pain? (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Lying down"/>
							<selection selected="false" text="Walking"/>
							<selection selected="false" text="Physical therapy"/>
							<selection selected="false" text="Pain pills"/>
							<selection selected="false" text="Muscle relaxants"/>
							<selection selected="false" text="Anti-inflammatories medications"/>
							<selection selected="false" text="Other activities">
								<question mandatory="true" prompt="If other activities, please list:">
									<free_form_response height="3"/>
								</question>
							</selection>
							<selection selected="false" text="Other medications">
								<question mandatory="true" prompt="If other medications, please list:">
									<free_form_response height="3"/>
								</question>
							</selection>
							<selection selected="false" text="None of the above"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What was the effect of the treatment? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Hot packs / ice">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Massage">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Physical therapy">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Exercises">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Biofeedback">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Brace">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Injections (cortisone)">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Injections (viscosupplementation)">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Non-aspirin anti-inflammatory medications">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Glucosamine (medication)">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Anti-rheumatic medications such as gold injections, methotrexate, etc.">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Pain medications">
					<question mandatory="true" prompt="Effect">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Helped"/>
							<selection selected="false" text="Made things worse"/>
							<selection selected="false" text="No change"/>
						</item_response>
					</question>
				</selection>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please list:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you recently (in the past month) had any of the following symptoms? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Fever >100 F / 38 C"/>
				<selection selected="false" text="Night sweats"/>
				<selection selected="false" text="Chills / tremors"/>
				<selection selected="false" text="Swelling and/or redness in the affected joint"/>
				<selection selected="false" text="Affected joint warm or hot to the touch"/>
				<selection selected="false" text="None of the above"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please describe:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is there currently any fluid drainage from the limb or fracture site?">
			<item_response drop_down_style="false" single_response="true">
                <selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>				
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please describe drainage site:">
						<free_form_response height="1"/>
					</question>
					<question mandatory="true" prompt="If yes, please describe color of drainage:">
						<free_form_response height="1"/>
					</question>
					<question mandatory="true" prompt="If yes, please describe odor of drainage:">
						<free_form_response height="1"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has there ever been evidence of infection at the fracture site?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please describe:">
						<free_form_response height="1"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="In the past six (6) months, have you been treated with an antibiotic (medication to fight infection)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please provide the following information for each course of antibiotics (starting with the current or most recent treatment):">
						<table_response initial_rows_to_display="3" add_row_increment="2">
							<column_definitions>
								<column_definition label="Name of antibiotic" width="20"/>
								<column_definition label="Dosage" width="10"/>
								<column_definition label="How often taken (1x/day, etc.)" width="20"/>
								<column_definition label="When started (exact date)" width="23"/>
								<column_definition label="When finished (exact date)" width="23"/>
								<column_definition label="How taken (IV, oral, etc.)" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please describe the range of motion in the joint above the fracture site:">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Unlimited movement"/>
				<selection selected="false" text="Partially limited movement"/>
				<selection selected="false" text="Severely limited movement"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please describe the range of motion in the joint below the fracture site:">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Unlimited movement"/>
				<selection selected="false" text="Partially limited movement"/>
				<selection selected="false" text="Severely limited movement"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="When you move, do you hear or feel any of the following in the affected limb?(Choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Snapping"/>
				<selection selected="false" text="Popping"/>
				<selection selected="false" text="Clicking"/>
				<selection selected="false" text="Creaking"/>
				<selection selected="false" text="Grating sound"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please describe:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding your current condition (joint replacement surgery, arthroscopy, medical treatment, etc.)?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="2" add_row_increment="0">
				<column_definitions>
					<column_definition label="Physician" width="20"/>
					<column_definition label="Specialty (Orthopedic surgeon, rheumatologist, etc.)" width="45"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="5"/>
		</question>
	</question_group>
</questionnaire>
