<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<!-- edited with XML Spy v3.5 NT (http://www.xmlspy.com) by harsha reddy -->
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are seeking a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Do you have a family history of any of the following: (fill in all that apply)">
			<table_response add_row_increment="2" row_height="3">
				<column_definitions>
					<column_definition label="Condition" width="20"/>
					<column_definition label="Relationship to you" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Aneurysm</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Coronary artery disease</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Cancer</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>CVA (stroke)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Diabetes</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Hypertension</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Elevated Cholesterol Level</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell> Other heart disease, please list below:</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Are there any family members with congenital heart disease?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have any family members with congenital heart disease, please provide the information below:">
						<table_response add_row_increment="2" row_height="3">
							<column_definitions>
								<column_definition label="Type of congenital &lt;BR&gt; heart problem" width="30"/>
								<column_definition label="Relationship to you" width="20"/>
								<column_definition label="Current condition of &lt;BR&gt; relative, if known" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Does any family member  have a heart murmur?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If any family member has a heart murmur, please provide the information below:">
						<table_response add_row_increment="2" row_height="3">
							<column_definitions>
								<column_definition label="Relationship to you" width="20"/>
								<column_definition label="Type of treatment &lt;BR&gt; done, (if known)" width="30"/>
								<column_definition label="Current condition of &lt;BR&gt; relative, if known" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a family history of first degree relatives (biological parents, siblings, children) with early death related to heart attack or early manifestations of blockages in relatively young (younger than 55) family members?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have a family history of first degree relatives with early death related to heart attack or early manifestations of blockages in relatively young family members, please provide specific details of the circumstances:">
						<free_form_response height="10"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a heart murmur?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have a heart murmur, what was your age when the murmur was discovered?">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="By whom (name of physician) was the murmur discovered?">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Since first discovered, has the heart murmur been?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="Consistently heard"/>
							<selection selected="false" text="Intermittently heard"/>
						</item_response>
					</question>
					<question mandatory="true" prompt="Which of the following best describes the physician's assessment of the heart  murmur?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="Innocent murmur requiring no treatment"/>
							<selection selected="false" text="Suspicious murmur requiring frequent follow-up"/>
							<selection selected="false" text="Significant murmur requiring evaluation"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have any of the following symptoms? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Shortness of breath"/>
				<selection selected="false" text="Chest pain"/>
				<selection selected="false" text="Difficulty breathing"/>
				<selection selected="false" text="Rapid breathing"/>
				<selection selected="false" text="Rapid heart rate"/>
				<selection selected="false" text="Cyanosis (purple color)"/>
				<selection selected="false" text="Fatigue"/>
				<selection selected="false" text="Dizziness"/>
				<selection selected="false" text="None of above "/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt=" If other, please list below:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever fainted?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever fainted, please explain circumstances (number of times, how frequently, etc.)">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you able to keep up with activities of daily living?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have any history of abnormal heart rhythms?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you experienced edema (swelling) of feet and / or legs?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have experienced edema of the feet and / or legs, have you experienced a sudden weight increase?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If you have experienced a sudden weight increase, how much weight have you gained and over what period of time?">
									<table_response add_row_increment="2" row_height="3">
										<column_definitions>
											<column_definition label="# of pounds / &lt;BR&gt; ounces / kilograms" width="20"/>
											<column_definition label="Over what period &lt;BR&gt; of time (# of days, &lt;BR&gt; weeks, months, etc.)" width="35"/>
										</column_definitions>
									</table_response>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please list all diagnostic studies (tests) you have had and dates tests were completed: (fill in all that apply)">
			<table_response initial_rows_to_display="2" add_row_increment="0" row_height="2">
				<column_definitions>
					<column_definition label="Test" width="30"/>
					<column_definition label="Date (Month / Year)" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Electrocardiogram (ECG, EKG)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Exercise Treadmill (Stress Test)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Echocardiogram</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Cardiac catheterization</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Angiogram</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other, please specify :</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Have you ever had heart surgery and or heart procedures?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please provide the following information:">
						<table_response add_row_increment="2" row_height="3">
							<column_definitions>
								<column_definition label="Type of surgery / &lt;BR&gt; procedure" width="20"/>
								<column_definition label="Date (month / year)" width="35"/>
								<column_definition label="Hospital" width="15"/>
								<column_definition label="Physician" width="15"/>
								<column_definition label="City / State" width="15"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has the patient ever had a pacemaker inserted?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If yes, please provide the following information:">
						<table_response add_row_increment="2" row_height="3">
							<column_definitions>
								<column_definition label="Type of Pacemaker" width="20"/>
								<column_definition label="Date (month / year)" width="35"/>
								<column_definition label="Hospital" width="15"/>
								<column_definition label="Physician" width="15"/>
								<column_definition label="City / State" width="15"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="Date it was last checked:">
						<table_response add_row_increment="2" row_height="3">
							<column_definitions>
								<column_definition label="Date (month / year)" width="35"/>
								<column_definition label="Hospital" width="15"/>
								<column_definition label="Physician" width="15"/>
								<column_definition label="City / State" width="15"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
