<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="When was your diagnosis made?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="What is the diagnosis?">
			<free_form_response height="1"/>
		</question>
		<question mandatory="true" prompt="When were you last examined by your physician for your current condition (the one you are seeking a second opinion for)?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="Do you have a family history of any of the following?  (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Cancer"/>
				<selection selected="false" text="Leukemia"/>
				<selection selected="false" text="Thalassemia"/>
				<selection selected="false" text="Aplastic anemia"/>
				<selection selected="false" text="Other anemias"/>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have a history of any of the following?  (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Infectious hepatitis (hepatitis C)"/>
				<selection selected="false" text="Chronic or severe infections"/>
				<selection selected="false" text="Leukemia"/>
				<selection selected="false" text="Thymus tumor(s)"/>
				<selection selected="false" text="Enlarged spleen"/>
				<selection selected="false" text="Thrombocytopenia"/>
				<selection selected="false" text="Anemia"/>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you received chemotherapy treatments?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you received chemotherapy treatments, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Name of chemotherapy" width="25"/>
								<column_definition label="Dosage (if known)" width="10"/>
								<column_definition label="Number of cycles (if known)" width="10"/>
								<column_definition label="Month/Year" width="10"/>
								<column_definition label="Physician" width="15"/>
								<column_definition label="Hospital/Clinic" width="15"/>
								<column_definition label="City, State" width="15"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you received radiation therapy?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have received radiation therapy, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of radiation" width="25"/>
								<column_definition label="Dosage (if known)" width="10"/>
								<column_definition label="Number of treatments (if known)" width="10"/>
								<column_definition label="Reason for treatment" width="10"/>
								<column_definition label="Month/Year" width="10"/>
								<column_definition label="Physician" width="15"/>
								<column_definition label="Hospital/Clinic" width="15"/>
								<column_definition label="City, State" width="15"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been exposed to toxic chemicals (benzene arsenic etc.)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been exposed to toxic chemicals, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Chemical/substance" width="25"/>
								<column_definition label="Length of Exposure (months/years)" width="25"/>
								<column_definition label="How exposed (home/work)" width="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever had any of the following diagnostic imaging studies?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever had any of the following diagnostic imaging studies, when?:">
						<table_response add_row_increment="2" row_height="1">
							<column_definitions>
								<column_definition label="Study" pct="70"/>
								<column_definition label="Month" pct="15"/>
								<column_definition label="Year" pct="15"/>
							</column_definitions>
							<table_data>
								<cell>Chest x-ray</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>MRI scan</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>CT scan</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Bone marrow biopsy</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Spleen biopsy</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Endoscopy (upper or lower)</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Other (please list below)</cell>
								<cell/>
								<cell/>
							</table_data>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you recently (within the past month) had any of the following symptoms?  (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Shortness of breath"/>
				<selection selected="false" text="Fever > 100 F / 38 C"/>
				<selection selected="false" text="Back pain"/>
				<selection selected="false" text="Rigors/shaking chills"/>
				<selection selected="false" text="Productive cough"/>
				<selection selected="false" text="Abdominal (belly) pain"/>
				<selection selected="false" text="Chest pain"/>
				<selection selected="false" text="Cough"/>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you recently (within the past month) taken an antibiotic to fight infection?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you recently have taken an antibiotic to fight infection, please provide the following information:">
						<table_response initial_rows_to_display="2" add_row_increment="2" row_height="1">
							<column_definitions>
								<column_definition label="Antibiotic name" width="20"/>
								<column_definition label="Dosage" width="10"/>
								<column_definition label="How often taken" width="15"/>
								<column_definition label="Exact date started" width="10"/>
								<column_definition label="Exact date stopped" width="10"/>
								<column_definition label="How taken (pill, IV etc.)" width="26"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever taken a steroid medication (Medrol, Prednisone, etc.)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever taken a steroid medication, please provide the following information:">
						<table_response initial_rows_to_display="2" add_row_increment="2" row_height="1">
							<column_definitions>
								<column_definition label="Steroid name" width="20"/>
								<column_definition label="Dosage" width="10"/>
								<column_definition label="How often taken" width="15"/>
								<column_definition label="Exact date started" width="10"/>
								<column_definition label="Exact date stopped" width="10"/>
								<column_definition label="How taken (pill, IV etc.)" width="26"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you currently experience any of the following symptoms? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Sore throat"/>
				<selection selected="false" text="Mouth ulcers (sores)"/>
				<selection selected="false" text="Mouth inflammation/infection"/>
				<selection selected="false" text="Enlarged lymph nodes"/>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you been recommended to have a bone marrow transplant?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="false" prompt="If you have been recommended to have a bone marrow transplant, have you had Human Leukocyte Antigen (HLA) testing done?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
					<question mandatory="false" prompt="If you have had Human Leukocyte Antigen (HLA) testing done, do you have a donor?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes"/>
						</item_response>
					</question>
					<question mandatory="false" prompt="If you do have a donor, what is your relationship to the donor?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="Parent"/>
							<selection selected="false" text="Sibling"/>
							<selection selected="false" text="Cousin"/>
							<selection selected="false" text="Other blood relative"/>
							<selection selected="false" text="Not a blood relative"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever received ATG (Antirhymocyte globulin) for your condition?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you ever received ATG for your condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="When started (month/year)" width="25"/>
								<column_definition label="Dose (if known)" width="25"/>
								<column_definition label="When finished (month/year) if applicable" width="40"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you received immunosuppressive therapy (Cyslosporine, steroids, etc.) for your condition?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have received immunosuppressive therapy, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="When started (month/year)" width="25"/>
								<column_definition label="Dose (if known)" width="25"/>
								<column_definition label="When finished (month/year) if applicable" width="40"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you received any blood transfusions?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you received any blood transfusions, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="When started (month/year)" width="25"/>
								<column_definition label="How often required" width="25"/>
								<column_definition label="When was most recent transfusion" width="40"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you started receiving transfusions before 1985, have you been tested for HIV (Human immunodeficiency virus)?">
						<item_response drop_down_style="false" single_response="true">
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If you have been tested for HIV, what was the result?">
									<free_form_response height="1"/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you experienced a recent weight gain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have experienced a recent weight gain, please provide the information below:">
						<table_response initial_rows_to_display="1" add_row_increment="0" row_height="1">
							<column_definitions>
								<column_definition label="# of pounds / kilograms gained" pct="30"/>
								<column_definition label="Over what period of time? (# weeks, months)" pct="60"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="What has been recommended regarding treatment of your current condition?">
			<free_form_response height="5"/>
		</question>
		<question prompt="Which doctor made this recommendation?">
			<table_response row_height="1" add_row_increment="0" initial_rows_to_display="1">
				<column_definitions>
					<column_definition label="Physician name" width="30"/>
					<column_definition label="Specialty (Hematologist, primary care, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
