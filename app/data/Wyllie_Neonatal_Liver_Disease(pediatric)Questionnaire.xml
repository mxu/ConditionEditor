				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="How many bowel movements does the patient have in an average day?">
			<free_form_response height="1"/>
		</question>
		<question mandatory="true" prompt="Has the frequency of bowel movements increased?">
			<item_response single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If the frequency of bowel movements increased, when did the increase in frequency occur?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has the patient experienced a change in the consistency of stools?">
			<item_response single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
