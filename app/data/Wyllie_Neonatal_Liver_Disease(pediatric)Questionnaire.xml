						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of surgery" width="20"/>
								<column_definition label="Date of &lt;BR&gt; treatment" width="15"/>
								<column_definition label="Physician" width="25"/>
								<column_definition label="Hospital/Clinic" width="25"/>
								<column_definition label="Location (City, State)" width="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has the patient undergone any surgical procedures for the condition?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
