					<cell/>
				</table_data>
				<table_data>
					<cell>Ascites (fluid in abdomen)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Recent weight change</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Please list all diagnostic test done/dates done: (choose all that apply)">
			<table_response add_row_increment="2" row_height="2">
				<column_definitions>
					<column_definition label="Study" pct="25"/>
					<column_definition label="Month" pct="15"/>
					<column_definition label="Year" pct="10"/>
				</column_definitions>
				<table_data>
					<cell>X-ray</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
