<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding patient's condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="What are the primary hopes and expectations that you have regarding this consultation?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Did the patient's mother experience any of the following problems with her pregnancy?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Fever"/>
				<selection selected="false" text="Infection"/>
				<selection selected="false" text="Antibiotic administration"/>
				<selection selected="false" text="Other medication administration"/>
				<selection selected="false" text="None of the above">
					<question mandatory="true" prompt="If other medication, please provide detail:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Did the patient go home with mother within 2 - 7 days following birth?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Yes"/>
				<selection selected="false" text="No">
					<question mandatory="true" prompt="If No, please explain the details of continued hospital stay:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Did the patient experience jaundice at or after birth?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If the patient experienced jaundice at or after birth, when (how many days after birth) did it occur?:">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Did the jaundice clear and then come back?">
						<item_response single_response="true" drop_down_style="false">
							<selection selected="false" text="Not sure"/>
							<selection selected="false" text="No"/>
							<selection selected="false" text="Yes">
								<question mandatory="true" prompt="If the jaundice cleared and then came back, please explain details of reoccurrence of the jaundice:">
									<free_form_response height="5"/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Was the patient born at full term?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="Yes"/>
				<selection selected="false" text="No">
					<question mandatory="true" prompt="If the patient was not born at full term, at how many months gestation was the patient born?">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What was the patient weight at birth?">
			<table_response initial_rows_to_display="1" add_row_increment="0" row_height="2">
				<column_definitions>
					<column_definition label="# of pounds / kilograms" width="15"/>
					<column_definition label="# of ounces / grams" width="15"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What was the patient length at birth?">
			<table_response initial_rows_to_display="1" add_row_increment="0" row_height="1">
				<column_definitions>
					<column_definition label="# of inches" width="15"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What was the patient current weight?">
			<table_response initial_rows_to_display="1" add_row_increment="0" row_height="2">
				<column_definitions>
					<column_definition label="# of pounds / kilograms" width="15"/>
					<column_definition label="# of ounces / grams" width="15"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="What is the patient current length?">
			<table_response initial_rows_to_display="1" add_row_increment="0" row_height="1">
				<column_definitions>
					<column_definition label="# of inches" width="15"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="true" prompt="Was the meconium passed within 24 - 48 hours from birth?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="How old was the patient when symptoms started?">
			<free_form_response height="1"/>
		</question>
		<question mandatory="true" prompt="When was the diagnosis established?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="Has there been a change in the diagnosis since the original one?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If there has been a change in the diagnosis since the original one, when?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
					<question mandatory="true" prompt="If there has been a change in the diagnosis since the original one, explain the details of the change in diagnosis:">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you feel the patient's health has deteriorated as a result of this condition?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has the patient received prior treatment for the condition?">
			<item_response single_response="true" drop_down_style="false">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If  the patient received prior treatment for the condition, please complete the following:">
						<table_response initial_rows_to_display="5" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of treatment" width="20"/>
								<column_definition label="Date (Month/Year)" width="15"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital, Clinic" width="15"/>
								<column_definition label="Location (City, State)" width="15"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="If  the patient has been treated for this condition, what is your general subjective impression of the experience? (In your own words)">
			<free_form_response height="10"/>
		</question>
		<question mandatory="true" prompt="Regarding the treatment patient has received, how would you rate your overall satisfaction with the treatment (1=not at all satisfied, 10=very satisfied)?">
			<item_response single_response="true" drop_down_style="true">
				<selection selected="false" text="1"/>
				<selection selected="false" text="2"/>
				<selection selected="false" text="3"/>
				<selection selected="false" text="4"/>
				<selection selected="false" text="5"/>
				<selection selected="false" text="6"/>
				<selection selected="false" text="7"/>
				<selection selected="false" text="8"/>
				<selection selected="false" text="9"/>
				<selection selected="false" text="10"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has the patient undergone any surgical procedures for the condition?">
