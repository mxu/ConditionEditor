<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<material_list>
	&MATERIAL_LIST_INTRODUCTORY_INSTRUCTION;
    &PHYSICIAN_LAST_REPORT;
    <material id="Primary physician or specialist physician's last report" description="Report should contain a current physical assessment of the patient's condition and a description of current signs and symptoms. This can be written by either your primary care physician or the physician who diagnosed or is treating your condition." mandatory="true"/>
    <material id="Doctor's notation of medications" description="Note should clearly indicate current listing of all medications (prescription, over the counter and vitamins)." mandatory="true"/>
	<material id="Case summary" description="Brief history of current problem with key findings from previous testing. This can be written by either your primary care physician(s) or physician who diagnosed or is treating your condition." mandatory="true"/>
	<material id="Doctor's letter" description="Copies of all letters sent to you by your physician(s) of last visit(s)." mandatory="true"/>
	<material id="Operative reports" description="Operative reports for all surgeries." mandatory="true"/>
	<material id="Pathology slides" description="Pathology reports and Glass slides for all biopsies performed." mandatory="true"/>
	
	<instruction text="&lt;BR&gt;The following radiologic and diagnostic studies done in the last 3 years will be required.  The actual original films (not copies) of the studies and the reports will be needed.  These studies to include the following:"/>
	
	<material id="Upper and/or lower gastrointestinal x-rays(Barium or Gastrograffin Enema)" description="Report and actual films." mandatory="true"/>
	<material id="Lower endoscopy studies(Colonoscopy, Sigmoidoscopy, Proctoscopy" description="Report and films if done." mandatory="true"/>
	<material id="CT Scan" description="Report and films if done." mandatory="true"/>
	<material id="Pelvic MRI" description="Report and films if done." mandatory="true"/>
	<material id="Sitz Marker Transit Study" description="Report and films." mandatory="true"/>
	<material id="Anal Manometry" description="Report." mandatory="true"/>
	<material id="Biofeedback" description="Report." mandatory="true"/>
	<material id="Defecography" description="Report and films." mandatory="true"/>
	
	<instruction text="The following list of medical information although not mandatory, are optional if done:"/>
	<material id="Current blood work" description="Within the last 6 months. (if done)" mandatory="false"/>
	<material id="EKG" description="Report only. (if done)" mandatory="false"/>
	<material id="Chest x-ray" description="Report only. (if done)" mandatory="false"/>
	<material id="Other" description="Any other medical information you or your physician may feel is pertinent to this consulation." mandatory="false"/>
	&MATERIAL_LIST_CLOSING_INSTRUCTION;
</material_list>
