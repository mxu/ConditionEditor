	<material id="Spinal Fluid Analysis" description="&lt;B&gt;Results of all studies related to CSF fluid.&lt;/B&gt;" mandatory="true"/>
	<material id="Fluorescein Angiograms" description="Reports and Films copied to CD for all completed studies." mandatory="true"/>
	<material id="Cerebral Angiogram" description="Report only of results." mandatory="true"/>
	<material id="Pathology Reports and Glass Slides" description="For all brain biopsies done." mandatory="true"/>
	<material id="Lab Testing Results" description="Reports of all lab studies related to condition." mandatory="true"/>
	<material id="Chest X-ray" description="Report only." mandatory="true"/>
	
	<instruction text="&lt;BR&gt;&lt;B&gt;  The following list of medical information although not mandatory, are optional and highly recommended if done: &lt;/B&gt;"/>
