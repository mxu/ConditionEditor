<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="Do you have a family history of cancer?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you do have a family history of cancer, please provide the following information regarding your family history. Please indicate if the family member is related on your maternal or fraternal side, if applicable.">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Family member &lt;BR&gt; (grandfather, sister, etc.)" width="25"/>
								<column_definition label="Maternal/paternal" width="20"/>
								<column_definition label="Type of cancer" width="25"/>
								<column_definition label="Age at diagnosis &lt;BR&gt; (if known)" width="30"/>
								<column_definition label="Current condition &lt;BR&gt; of relative" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you have, or have you ever had, any autoimmune diseases?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have, or have you ever had, any autoimmune diseases, please indicate below: (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Rheumatoid arthritis"/>
							<selection selected="false" text="SLE (Systemic lupus erythematosis)"/>
							<selection selected="false" text="Scleroderma"/>
							<selection selected="false" text="Polymyositis"/>
							<selection selected="false" text="Giant cell arteritis"/>
							<selection selected="false" text="Wegener's granulomatosis"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please list:">
									<free_form_response height="2"/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever had a myocardial infarction (heart attack)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Is the esophageal mass enlarging?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you ever been exposed to ionized radiation?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have ever been exposed to ionized radiation, when did the exposure take place?">
						&MONTH_YEAR_TABLE_RESPONSE;
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you had cancer?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have had cancer, please provide the following information:">
						<table_response add_row_increment="2" initial_rows_to_display="2" row_height="2">
							<column_definitions>
								<column_definition label="Type of cancer" width="20"/>
								<column_definition label="Date of diagnosis &lt;BR&gt; (Month/Year)" width="25"/>
								<column_definition label="Type of treatment received &lt;BR&gt; (surgery, chemotherapy, radiation, etc.)" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you experiencing any pain?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you are experiencing any pain, where is the pain located?">
						<free_form_response height="2"/>
					</question>
					<question prompt="Please rate your pain on the scale below: (1= minimal pain, 10= worst pain)" mandatory="true">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Worst pain"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Moderate Pain"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Minimal pain"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you currently experiencing any of the following symptoms? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Cough"/>
				<selection selected="false" text="Shortness of breath with mild exertion"/>
				<selection selected="false" text="Shortness of breath with strenuous exercise"/>
				<selection selected="false" text="Shortness of breath at rest"/>
				<selection selected="false" text="Blood in your sputum"/>
				<selection selected="false" text="Hoarseness"/>
				<selection selected="false" text="Angina (chest pain)"/>
				<selection selected="false" text="Heartburn"/>
				<selection selected="false" text="Nausea"/>
				<selection selected="false" text="Vomiting"/>
				<selection selected="false" text="Diarrhea"/>
				<selection selected="false" text="Unintentional weight gain >10 pounds / 5 kg">
					<question prompt="for unintentional weight gain >10 pounds / 5 kg, please provide the following information:">
						<table_response add_row_increment="0" initial_rows_to_display="1">
							<column_definitions>
								<column_definition label="# of Pounds" width="15"/>
								<column_definition label="Over what period of &lt;BR&gt; time (months/years)" width="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
				<selection selected="false" text="Unintentional weight loss >10 pounds / 5 kg">
					<question prompt="for unintentional weight loss >10 pounds / 5 kg, please provide the following information:">
						<table_response add_row_increment="0" initial_rows_to_display="1">
							<column_definitions>
								<column_definition label="# of Pounds" width="15"/>
								<column_definition label="Over what period of &lt;BR&gt; time (months/years)" width="25"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
				<selection selected="false" text="Other">
					<question prompt="If other, please list:">
						<free_form_response height="1"/>
					</question>
				</selection>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="How was your esophageal cancer diagnosed? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="CT scan"/>
				<selection selected="false" text="Chest x-ray"/>
				<selection selected="false" text="Other X-rays"/>
				<selection selected="false" text="Ultrasound"/>
				<selection selected="false" text="Surgery"/>
				<selection selected="false" text="Biopsy"/>
				<selection selected="false" text="Unknown"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please list:">
						<table_response initial_rows_to_display="2" add_row_increment="2" row_height="1">
							<column_definitions>
								<column_definition label="Type of study" width="30"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="When was your diagnosis made?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="When were you last examined by you physician?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="Has the cancer metastasized (spread to another location)?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If the cancer has metastasized, to where has the cancer spread?">
						<free_form_response width="30"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you had any of the following studies?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have had any of the following studies, please indicate below: (choose all that apply)">
						<table_response add_row_increment="2">
							<column_definitions>
								<column_definition label="Study" pct="70"/>
								<column_definition label="Month" pct="15"/>
								<column_definition label="Year" pct="15"/>
							</column_definitions>
							<table_data>
								<cell>CT scan</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>MRI scan</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Chest X-ray</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>IVP</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>KUB</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Other x-rays</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Ultrasound</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Bone scan</cell>
								<cell/>
								<cell/>
							</table_data>
							<table_data>
								<cell>Other (Please list below)</cell>
								<cell/>
								<cell/>
							</table_data>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone any surgery / surgical procedures for your current condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone any surgery / surgical procedures for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Surgery/Procedure" width="25"/>
								<column_definition label="Month/Year" width="20"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone surgical treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the surgery, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not al all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone chemotherapy treatment for your current condition?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone chemotherapy treatment for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Name of chemotherapy" width="25"/>
								<column_definition label="Dosage" width="10"/>
								<column_definition label="Number of cycles (if known)" width="10"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone chemotherapy treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the chemotherapy treatment, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not al all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone radiation therapy treatment for your current condition?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone radiation therapy treatment for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of radiation" width="25"/>
								<column_definition label="Dosage (if known)" width="10"/>
								<column_definition label="Number of treatments" width="10"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone radiation therapy treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the radiation therapy treatment, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not al all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you received any experimental or alternative treatment for your current condition?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have received any experimental or alternative treatment for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of treatment" width="25"/>
								<column_definition label="# of treatments (if known)" width="10"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone experimental or alternative treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the experimental or alternative therapy, how would you rate your overall satisfaction with the treatment? (1= not at all satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not al all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Has any treatment been recommended for your current condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If any treatment has been recommended for your current condition, what type of treatment has been recommended (surgery, medical management, etc.)">
						<free_form_response height="6"/>
					</question>
					<question mandatory="true" prompt="Which doctor made this recommendation?">
						<table_response initial_rows_to_display="1" add_row_increment="0" row_height="1">
							<column_definitions>
								<column_definition label="Physician" width="25"/>
								<column_definition label="Specialty (surgeon, oncologist, etc.)" width="50"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
