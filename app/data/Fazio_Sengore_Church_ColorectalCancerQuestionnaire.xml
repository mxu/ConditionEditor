<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="false" prompt="Do you have a family history of any of the following conditions?  (Fill in all that apply)">
			<table_response add_row_increment="2" row_height="2">
				<column_definitions>
					<column_definition label="Condition" width="35"/>
					<column_definition label="Family&lt;BR&gt; Relationship" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Liver Problems (hepatitis, cirrhosis, etc.)</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Colitis or inflammatory bowel disease</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Crohn's disease</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other cancer (please list below)</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Do you have a history of any of the following?  (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Colon polyps"/>
				<selection selected="false" text="Colon cancer"/>
				<selection selected="false" text="Other cancer"/>
				<selection selected="false" text="Radiation / chemotherapy"/>
				<selection selected="false" text="Crohn's disease / ulcerative colitis"/>
				<selection selected="false" text="Ulcers"/>
				<selection selected="false" text="Gallstones"/>
				<selection selected="false" text="Liver problems (hepatitis / cirrhosis, etc.)"/>
				<selection selected="false" text="Thyroid disease"/>
				<selection selected="false" text="Kidney stones"/>
				<selection selected="false" text="Pancreatitis"/>
				<selection selected="false" text="Arthritis"/>
				<selection selected="false" text="Rheumatic fever"/>
				<selection selected="false" text="Gastrointestinal bleeding"/>
				<selection selected="false" text="None of the above"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please complete the following table regarding any symptoms you may or may not be experiencing.  Please indicate yes, no or not sure for each symptom listed.">
			<table_response add_row_increment="2" row_height="2">
				<column_definitions>
					<column_definition label="Symptom" width="45"/>
					<column_definition label="Yes / No &lt;BR&gt; Not Sure" width="20"/>
				</column_definitions>
				<table_data>
					<cell>Difficulty swallowing/food sticking in throat</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Heartburn</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Hoarseness</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Regurgitation</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Chest pain</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Filling up quickly at meals</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Chronic cough</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Loss of appetite</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Nausea</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Vomiting</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Vomiting blood</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Loss of control of bowel movements</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Recent change in bowel movements</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Bloody or black bowel movements</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Constipation</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Diarrhea</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Night sweats, fever or chills</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Thought or memory problems</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Fistulas</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Prominent leg swelling</cell>
					<cell/>
				</table_data>
				<table_data>
					<cell>Ascities (fluid in abdomen)</cell>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Have you recently had an unintentional weight loss greater than 10 pounds / 5 kilograms?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you recently had an unintentional weight loss greater than 10 pounds / 5 kilograms, how much (in pounds / kilograms) and over what period of time?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Pounds / kilograms" width="15"/>
								<column_definition label="Period of time" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you recently had an unintentional weight gain greater than 10 pounds / 5 kilograms?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you recently had an unintentional weight gain greater than 10 pounds / 5 kilograms, how much (in pounds / kilograms) and over what period of time?">
						<table_response initial_rows_to_display="1" add_row_increment="0">
							<column_definitions>
								<column_definition label="Pounds / kilograms" width="15"/>
								<column_definition label="Period of time" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="false" prompt="Have you had any of the following studies?  If so, when?">
			<table_response add_row_increment="2">
				<column_definitions>
					<column_definition label="Study" width="20"/>
					<column_definition label="Month" width="20"/>
					<column_definition label="Year" width="10"/>
				</column_definitions>
				<table_data>
					<cell>CT scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>MRI scan</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Ultrasound</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Upper GI x-rays</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Lower GI x-rays</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Endoscopy</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Colonoscopy</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Sigmoidoscopy</cell>
					<cell/>
					<cell/>
				</table_data>
				<table_data>
					<cell>Other (list below)</cell>
					<cell/>
					<cell/>
				</table_data>
			</table_response>
		</question>
		<question mandatory="true" prompt="Have you undergone surgery / surgical procedure(s) for your current condition (one you are seeking opinion for)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone surgical treatment for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="2" row_height="2">
							<column_definitions>
								<column_definition label="Surgery/Procedure" width="25"/>
								<column_definition label="Month/Year" width="20"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone surgical treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone chemotherapy treatment for your current condition (one you are seeking opinion for)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone chemotherapy treatment for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Name of chemotherapy" width="25"/>
								<column_definition label="Dosage" width="10"/>
								<column_definition label="Number of cycles&lt;BR&gt; (if known)" width="10"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone chemotherapy treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the chemotherapy, how would you rate your overall satisfaction with the treatment? (1= not satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not al all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone radiation therapy for your current condition (one you are seeking opinion for)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone radiation therapy for your current condition, please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of radiation" width="25"/>
								<column_definition label="Dosage&lt;BR&gt; (if known)" width="10"/>
								<column_definition label="Number of treatments" width="10"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone radiation therapy treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the radiation therapy treatment, how would you rate your overall satisfaction with the treatment? (1= not satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not al all satisfied"/>
						</item_response>

					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone experimental or alternative treatment for your current condition (one you are seeking opinion for)?">
			<item_response single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone experimental or alternative treatment for your current condition please complete the following information:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Type of treatment" width="25"/>
								<column_definition label="Month/Year" width="15"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone experimental or alternative treatment, what is your general subjective impression of the experience?  (In your own words)">
						<free_form_response height="5"/>
					</question>
					<question mandatory="true" prompt="Regarding the experimental or alternative treatment, how would you rate your overall satisfaction with the treatment? (1= not satisfied, 10= very satisfied)">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding the treatment of your current condition? (surgery, chemotherapy, etc.)">
			<free_form_response height="3"/>
		</question>
		<question mandatory="false" prompt="Which doctor made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
				<column_definitions>
					<column_definition label="Physician name" width="30"/>
					<column_definition label="Specialty (surgeon, oncologist, primary care, etc.)" width="50"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
