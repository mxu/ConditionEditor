<material_list>
	&MATERIAL_LIST_INTRODUCTORY_INSTRUCTION;
      &PHYSICIAN_LAST_REPORT;
	<material id="Doctor's letters" description="Copies of all letters sent to you by your physician(s) of last visit(s), if received." mandatory="true"/>
	<material id="Physician's reports" description="Reports of any and all other treatments received for this diagnosis, for example: chemotherapy, radiation therapy, etc." mandatory="true"/>
	<material id="Doctor's notation of medications" description="Note should clearly indicate current listing of all medications (prescription, over the counter and vitamins)." mandatory="true"/>
	<material id="Operative reports" description="Reports are required for all relevant surgeries." mandatory="true"/>
	<material id="Discharge summaries" description="Discharge summaries of any recent (within one year) hospitalizations." mandatory="true"/>
	<instruction text="&lt;BR&gt;  The following radiologic and diagnostic studies done in the last 3 years will be required.  Reports and (actual) films for all radiology studies performed thus far, if indicated.  These studies to include the following:"/>
	<material id="Bone Marrow Test" description="Laboratory pathology reports and glass slides for all relevant biopsies" mandatory="true"/>
	<material id="MRI Scan of Spine " description="Radiology report and actual films " mandatory="true"/>
	<material id="Chest x-ray" description="Radiology report and actual films " mandatory="true"/>
	<material id="Bone Survey " description="Report and films." mandatory="true"/>
	<material id="Bone Densitometry" description="Report and films." mandatory="true"/>
	<instruction text="&lt;BR&gt;  Current laboratory blood test reports from time of diagnosis and within past 12 months to include the following tests:"/>
	<material id="CBC (Complete Blood Count) with Differential (includes red blood cells, white blood cells,  hemoglobin, hematocrit, and indices, (MCV, MCHC))" description="Laboratory blood test report (at the time of diagnosis)" mandatory="true"/>
	<material id="Beta 2 (B 2) microglobulin" description="Laboratory blood test report (at the time of diagnosis)" mandatory="true"/>
	<material id="SPEP" description="Laboratory blood test report (at the time of diagnosis)" mandatory="true"/>
	<material id="24 hour protein at time of diagnosis" description="Laboratory blood test report (at the time of diagnosis)" mandatory="true"/>
	<material id="Albumin" description="Laboratory blood test report" mandatory="true"/>
	<material id="Calcium" description="Laboratory blood test report" mandatory="true"/>
	<material id="Uric Acid" description="Laboratory blood test report" mandatory="true"/>
	<material id="Folic Acid" description="Laboratory blood test report" mandatory="true"/>
	<material id="Blood Urea Nitrogen (BUN)" description="Laboratory blood test report" mandatory="true"/>
	<material id="Creatinine" description="Laboratory blood test report" mandatory="true"/>
	<material id="Platelet count " description="Laboratory blood test report" mandatory="true"/>
	<material id="Alkaline Phosphatase" description="Laboratory blood test report" mandatory="true"/>
	<material id="Lactate Dehydrogenase (LDH)" description="Laboratory blood test report" mandatory="true"/>
	<material id="Asparate Aminotransferase (AST)" description="Laboratory blood test report" mandatory="true"/>
	<material id="Alanine Aminotransferase (ALT)" description="Laboratory blood test report" mandatory="true"/>
	<instruction text=" The following list of radiologic and diagnostic studies, although not mandatory, are optional if done. Radiology films must be copied to compact disc (CD) for submission."/>
	<material id="Other current (within last 6 months) blood work " description="Laboratory blood test report (if done)" mandatory="false"/>
	<material id="Other" description="Any other medical information you or your physician may feel is pertinent to your condition." mandatory="false"/>
	&MATERIAL_LIST_CLOSING_INSTRUCTION;
</material_list>
