<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="What is the principal (chief) question or concern you have regarding your current condition?">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of your problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="When was your diagnosis made?">
					&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="What is your diagnosis (Please provide the exact diagnosis of known.)?">
			<free_form_response height="1"/>
		</question>
		<question mandatory="true" prompt="When were you last examined by your physician?">
					&MONTH_YEAR_TABLE_RESPONSE;
					</question>
		<question mandatory="true" prompt="How was your diagnosis made? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="EEG (Electroencephalogram)"/>
				<selection selected="false" text="CT Scan"/>
				<selection selected="false" text="MRI Scan"/>
				<selection selected="false" text="X-rays"/>
				<selection selected="false" text="Monitoring Unit Elevation"/>
				<selection selected="false" text="Blood work"/>
				<selection selected="false" text="Surgery"/>
				<selection selected="false" text="Not Sure"/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please explain:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Are you?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Right Handed"/>
				<selection selected="false" text="Left Handed"/>
				<selection selected="false" text="Ambidextrous"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="When did you experience your first spell of seizure activity?">
					&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="Seizures can be categorized in various ways.  Have you been told what type of seizures you have?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have been told what type of seizures you have, what type of seizures do you have? (choose all that apply)">
						<item_response drop_down_style="false" single_response="false">
							<selection selected="false" text="Partial"/>
							<selection selected="false" text="Simple Partial"/>
							<selection selected="false" text="Complex Partial"/>
							<selection selected="false" text="Generalized"/>
							<selection selected="false" text="Absence (Petit Mal)"/>
							<selection selected="false" text="Atypical Absences"/>
							<selection selected="false" text="Myoclonic"/>
							<selection selected="false" text="Tonic-clinic (Grand Mal)"/>
							<selection selected="false" text="Atonic"/>
							<selection selected="false" text="Other">
								<question mandatory="true" prompt="If other, please explain in depth:">
									<free_form_response height="1"/>
								</question>
							</selection>
						</item_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Do you experience more than one type of seizure?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Not sure"/>
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you experience more than one type of seizure, how many types of seizures do you have? (choose all that apply)">
