<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../condition.xsl"?>
<questionnaire>
	<question_group name="Diagnosis-specific Questions">
		<question mandatory="true" prompt="In your own words, please provide a brief narrative of the details of the problem for which you are requesting a second opinion:">
			<free_form_response height="5"/>
		</question>
		<question mandatory="true" prompt="When was your diagnosis made?">
			&MONTH_YEAR_TABLE_RESPONSE;
		</question>
		<question mandatory="true" prompt="What is your diagnosis? (please provide exact diagnosis if known)">
			<free_form_response height="3"/>
		</question>
		<question mandatory="true" prompt="How was your diagnosis made? (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="CT scan"/>
				<selection selected="false" text="CTA scan"/>
				<selection selected="false" text="MRI scan"/>
				<selection selected="false" text="MRA scan"/>
				<selection selected="false" text="X-rays"/>
				<selection selected="false" text="Ultrasound"/>
				<selection selected="false" text="Angiogram"/>
				<selection selected="false" text="Surgery"/>
				<selection selected="false" text="Unknown "/>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="If other, please list:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please list all diagnostic imaging studies/tests you have undergone: &lt;&gt; (choose all that apply) &lt;BR&gt; Please include all studies (pre and post any treatments), dates done and location.">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="X-rays">
					<question mandatory="true" prompt="">
						<table_response initial_rows_to_display="1" add_row_increment="1" row_height="1">
							<column_definitions>
								<column_definition label="Date (Month, Year)" width="20"/>
								<column_definition label="Hospital, clinic, diagnostic center" width="30"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
				<selection selected="false" text="CT scan">
					<question mandatory="true" prompt="">
						<table_response initial_rows_to_display="1" add_row_increment="1" row_height="1">
							<column_definitions>
								<column_definition label="Date (Month, Year)" width="20"/>
								<column_definition label="Hospital, clinic, diagnostic center" width="30"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
				<selection selected="false" text="CTA Scan">
					<question mandatory="true" prompt="">
						<table_response initial_rows_to_display="1" add_row_increment="1" row_height="1">
							<column_definitions>
								<column_definition label="Date (Month, Year)" width="20"/>
								<column_definition label="Hospital, clinic, diagnostic center" width="30"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
				<selection selected="false" text="MRI scan">
					<question mandatory="true" prompt="">
						<table_response initial_rows_to_display="1" add_row_increment="1" row_height="1">
							<column_definitions>
								<column_definition label="Date (Month, Year)" width="20"/>
								<column_definition label="Hospital, clinic, diagnostic center" width="30"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
				<selection selected="false" text="MRA scan">
					<question mandatory="true" prompt="">
						<table_response initial_rows_to_display="1" add_row_increment="1" row_height="1">
							<column_definitions>
								<column_definition label="Date (Month, Year)" width="20"/>
								<column_definition label="Hospital, clinic, diagnostic center" width="30"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
				<selection selected="false" text="Ultrasound">
					<question mandatory="true" prompt="">
						<table_response initial_rows_to_display="1" add_row_increment="1" row_height="1">
							<column_definitions>
								<column_definition label="Date (Month, Year)" width="20"/>
								<column_definition label="Hospital, clinic, diagnostic center" width="30"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
				<selection selected="false" text="Angiogram">
					<question mandatory="true" prompt="">
						<table_response initial_rows_to_display="1" add_row_increment="1" row_height="1">
							<column_definitions>
								<column_definition label="Date (Month, Year)" width="20"/>
								<column_definition label="Hospital, clinic, diagnostic center" width="30"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
				<selection selected="false" text="Other">
					<question mandatory="true" prompt="">
						<table_response initial_rows_to_display="1" add_row_increment="1" row_height="1">
							<column_definitions>
							    <column_definition label="Test" width="20"/>
								<column_definition label="Date (Month, Year)" width="20"/>
								<column_definition label="Hospital, clinic, diagnostic center" width="30"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Please check all the treatments you have received so far for your current condition: (choose all that apply)">
			<item_response drop_down_style="false" single_response="false">
				<selection selected="false" text="Surgery"/>
				<selection selected="false" text="Radiation"/>
				<selection selected="false" text="Seizure medication"/>
				<selection selected="false" text="Steroid medication"/>
				<selection selected="false" text="None of the above"/>
				<selection selected="false" text="Other treatment or medications">
					<question mandatory="true" prompt="If other treatment or medications, please list:">
						<free_form_response height="3"/>
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Have you undergone surgery for your current condition?">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="No"/>
				<selection selected="false" text="Yes">
					<question mandatory="true" prompt="If you have undergone surgery for your current condition, please provide additional information below:">
						<table_response initial_rows_to_display="3" add_row_increment="3" row_height="2">
							<column_definitions>
								<column_definition label="Name of procedure" width="30"/>
								<column_definition label="Month/Year" width="20"/>
								<column_definition label="Physician" width="20"/>
								<column_definition label="Hospital/Clinic" width="20"/>
								<column_definition label="City, State" width="20"/>
							</column_definitions>
						</table_response>
					</question>
					<question mandatory="true" prompt="If you have undergone surgery for your current condition, what is your general subjective impression of the experience? (in your own words)">
						<free_form_response height="10"/>
					</question>
					<question mandatory="true" prompt="Regarding the surgery, how would you rate your overall satisfaction with the treatment?">
						<item_response drop_down_style="true" single_response="true">
							<selection selected="false" text="10 - Very satisfied"/>
							<selection selected="false" text="9"/>
							<selection selected="false" text="8"/>
							<selection selected="false" text="7"/>
							<selection selected="false" text="6"/>
							<selection selected="false" text="5 - Satisfied"/>
							<selection selected="false" text="4"/>
							<selection selected="false" text="3"/>
							<selection selected="false" text="2"/>
							<selection selected="false" text="1 - Not at all satisfied"/>
						</item_response>
					
					</question>
				</selection>
			</item_response>
		</question>
		<question mandatory="true" prompt="Which is your dominant hand? (choose one of the following) ">
			<item_response drop_down_style="false" single_response="true">
				<selection selected="false" text="Right"/>
				<selection selected="false" text="Left"/>
				<selection selected="false" text="Ambidextrous"/>
				<selection selected="false" text="Not sure"/>
			</item_response>
		</question>
		<question mandatory="true" prompt="What has been recommended regarding the treatment of your current condition?  (surgery, medical management, etc.)">
			<free_form_response height="5"/>
		</question>
		<question mandatory="false" prompt="Which physician made this recommendation?">
			<table_response initial_rows_to_display="1" add_row_increment="0">
				<column_definitions>
					<column_definition label="Physician" width="30"/>
					<column_definition label="Specialty &lt;BR&gt; (primary care physician, neurologist, neurosurgeon, etc.)" width="45"/>
				</column_definitions>
			</table_response>
		</question>
		<question mandatory="false" prompt="Is there anything else you think would be helpful regarding your condition?">
			<free_form_response height="10"/>
		</question>
	</question_group>
</questionnaire>
